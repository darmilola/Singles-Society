<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/special_activity_background"
    android:orientation="vertical">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:id="@+id/backButton"
        android:layout_marginLeft="16dp"
        app:tint="#fa5672"
        android:src="@drawable/arrow_arrows_back_direction_left_icon"/>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/welcomePeople"
        android:transitionName="welcomePeople"
        android:layout_gravity="top"
        android:layout_weight="1.5">


        <View
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="top|center"
            android:layout_marginTop="70dp"
            android:background="@drawable/filled_full_circle"
            android:backgroundTint="#8AFA5672"/>

        <FrameLayout
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#2AFA5672"
                android:layout_margin="15dp"
                android:gravity="center"
                android:background="@drawable/filled_full_circle">

            </LinearLayout>



            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:translationZ="5dp"
                android:src="@drawable/happy_lady"
                app:cardCornerRadius="100dp"
                android:layout_gravity="center"
                android:outlineSpotShadowColor="@color/transparent"
                app:cardBackgroundColor="@color/transparent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/happy_lady"/>
            </androidx.cardview.widget.CardView>


            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center|left"
                android:layout_marginLeft="50dp"
                android:background="@drawable/filled_full_circle"
                android:backgroundTint="#8AFA5672"/>

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/happy_lady"
                app:cardCornerRadius="90dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                android:outlineSpotShadowColor="@color/transparent"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/transparent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/african_american_woman"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/happy_lady"
                app:cardCornerRadius="90dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="70dp"
                android:layout_gravity="bottom"
                android:outlineSpotShadowColor="@color/transparent"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/transparent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/business_woman"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/happy_lady"
                app:cardCornerRadius="90dp"
                android:layout_marginTop="30dp"
                android:translationZ="2dp"
                android:layout_marginBottom="70dp"
                android:layout_gravity="bottom|right"
                android:outlineSpotShadowColor="@color/transparent"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/transparent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/young_man"/>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/happy_lady"
                app:cardCornerRadius="90dp"
                android:layout_marginRight="30dp"
                android:translationZ="2dp"
                android:layout_gravity="top|right"
                android:outlineSpotShadowColor="@color/transparent"
                app:cardBackgroundColor="@color/transparent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/black_traditional"/>
            </androidx.cardview.widget.CardView>

        </FrameLayout>



    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_gravity="bottom"
        android:background="@color/special_activity_background"
        android:backgroundTint="@color/special_activity_background"
        android:orientation="vertical"
        android:weightSum="5">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="4dp"
                    android:textSize="30dp"
                    android:gravity="left"
                    android:textColor="@color/dark_text_color"
                    android:fontFamily="@font/avenirbold"
                    android:text="Create Account"/>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="-20dp"
                    android:weightSum="2">


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/sign_up_firstname_layout"
                        style="@style/NewRegisterTextField"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        app:errorEnabled="true"
                        app:errorTextAppearance="@style/ErrorText">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/sign_up_firstname"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:hint="Firstname"
                            android:maxLength="160"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textColorHint="@color/lighter_text_color"
                            android:textColor="@color/dark_gray"
                            android:textSize="17sp"
                            android:fontFamily="@font/manropemedium" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/sign_up_lastname_layout"
                        style="@style/NewRegisterTextField"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        app:errorEnabled="true"
                        app:errorTextAppearance="@style/ErrorText">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/sign_up_lastname"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:hint="Lastname"
                            android:maxLength="160"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textColorHint="@color/lighter_text_color"
                            android:textColor="@color/dark_gray"
                            android:textSize="17sp"
                            android:fontFamily="@font/manropemedium" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>



                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/sign_up_email_layout"
                    style="@style/NewRegisterTextField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    app:errorEnabled="true"
                    android:layout_marginBottom="-20dp"
                    app:errorTextAppearance="@style/ErrorText">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/sign_up_email"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:hint="Email"
                        android:maxLength="160"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textSize="17sp"
                        android:fontFamily="@font/manropemedium"
                        android:textColorHint="@color/lighter_text_color"
                        android:textColor="@color/dark_gray" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/sign_up_password_layout"
                    style="@style/NewRegisterTextField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="5dp"
                    app:errorEnabled="true"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/pink"
                    android:layout_marginBottom="-25dp"
                    app:errorTextAppearance="@style/ErrorText">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/sign_up_password"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:hint="Password"
                        android:maxLength="160"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:textColorHint="@color/lighter_text_color"
                        android:textColor="@color/dark_gray"
                        android:textSize="17sp"
                        android:fontFamily="@font/manropemedium"/>
                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Must be at least 8 character"
                    android:padding="5dp"
                    android:gravity="left"
                    android:textSize="12sp"
                    android:fontFamily="@font/manropemedium"
                    android:textColor="#838485"/>







                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/signup_with_email_button"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#fa5672"
                    android:background="@drawable/filled_button_background"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:fontFamily="@font/manropemedium"
                        android:text="Sign Up"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/already_have_account"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:fontFamily="@font/avenirbold"
                    android:id="@+id/sign_up_have_account"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</FrameLayout>