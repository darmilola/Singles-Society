<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:background="@color/special_activity_background"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/special_activity_background"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/topView"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:layout_constraintTop_toTopOf="parent"
                android:background="#D5D2D2"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:id="@+id/profileArea"
                app:layout_constraintBottom_toTopOf="@id/postContentLayout"
                app:layout_constraintTop_toBottomOf="@id/topView">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/accountProfilePicture"
                    app:layout_constraintEnd_toStartOf="@id/accountInfoRoot"
                    android:src="@drawable/woman_official"/>
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/accountInfoRoot"
                    android:gravity="center|left"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/accountProfilePicture">

                    <com.SinglesSociety.SocialText.RichTextController.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@katieBrown"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/dark_text_color"
                        android:textSize="12sp"
                        android:fontFamily="@font/manropesemibold"/>

                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/profileArea"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                app:layout_constraintBottom_toTopOf="@id/bottomView"
                android:layout_marginBottom="10dp"
                android:id="@+id/postContentLayout">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.SinglesSociety.SocialText.RichTextController.FontTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:id="@+id/postTextView"
                        android:background="@color/transparent"
                        android:textSize="15sp"
                        android:lineSpacingExtra="2dp"
                        android:textColor="#1B1616"
                        android:maxLines="5"
                        android:fontFamily="@font/opensansreg"
                        android:paddingLeft="10dp"
                        android:text="The implosion of a submersible tourin board, has prompted questions about the regulations overseeing such voyages â€” and whether the vehicle itself was safe.On Friday, the company responsible for the tour, OceanGate Expeditions, defended the decisions of its chief executive Stockton Rush, who died on board the submersible."
                        app:layout_constraintBottom_toTopOf="@id/postAttachmentRecyclerView"
                        app:layout_constraintTop_toTopOf="parent"/>


                    <com.singlesSociety.Arvi.widget.PlayableItemsRecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@id/postTextView"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:clipToPadding="false"
                        tools:itemCount="5"
                        android:paddingRight="80dp"
                        android:paddingLeft="-10dp"
                        android:nestedScrollingEnabled="false"
                        android:orientation="horizontal"
                        tools:listitem="@layout/post_text_image_attachment_v2"
                        android:id="@+id/postAttachmentRecyclerView"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/bottomView"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="#D5D2D2"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>