<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/special_activity_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profileArea"
        app:layout_constraintTop_toTopOf="parent">

        <include
            layout="@layout/society_user_profile_picture"
            android:layout_height="60dp"
            android:layout_width="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/accountProfilePictureLayout"
            app:layout_constraintEnd_toStartOf="@id/accountInfoRoot"/>


        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/accountInfoRoot"
            android:gravity="center|left"
            android:layout_marginLeft="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/accountProfilePictureLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Katie Allens"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#303030"
                android:textSize="15sp"
                android:fontFamily="@font/ggsansbold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="\@The Space Name Goes here"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/dark_text_color"
                android:textSize="13sp"
                android:fontFamily="@font/ggsansmedium"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:textColor="@color/light_text_color"
                android:fontFamily="@font/ggsansmedium"
                android:textSize="13sp"
                android:text="45m"
                android:gravity="center"/>

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:rotation="90"
                app:tint="@color/dark_text_color"
                android:src="@drawable/overflow_menu_icon"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>