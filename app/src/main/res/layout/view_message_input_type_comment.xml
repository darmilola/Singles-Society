<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="8"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:layout_alignParentStart="true"
        android:paddingRight="10dp"
        android:orientation="horizontal"
        android:weightSum="8"
        android:backgroundTint="#EFEFEF"
        android:background="@drawable/filled_transparent_circle"
        android:layout_weight="7">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="2dp"
            android:id="@id/attachmentButtonSpace">

            <ImageView
                android:id="@id/emojiButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                app:tint="@color/society_pink"
                android:src="@drawable/select_image"/>

        </LinearLayout>


        <com.SinglesSociety.SocialText.RichTextController.RTEditText
            android:id="@id/messageInput"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="6"
            android:textColor="@color/light_text_color"/>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/emojiSelectLayout"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="2dp">

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_marginLeft="5dp"
                android:src="@drawable/select_image"
                app:tint="@color/grey" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_alignParentEnd="true">
        <ImageView
            android:id="@id/messageSendButton"
            android:layout_width="28dp"
            app:tint="@color/society_pink"
            android:src="@drawable/send_filled_icon"
            android:layout_height="28dp"/>
    </LinearLayout>


</merge>
