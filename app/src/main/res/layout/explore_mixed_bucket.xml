<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@id/mixedBucketRecyclerView"
        android:id="@+id/mixedBucketConstraintRoot">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/forYouTitleLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="For You"
                android:id="@+id/exploreForYou"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/dark_text_color"
                android:layout_gravity="left"
                android:textSize="20sp"
                android:fontFamily="@font/kumelianbold"/>


            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/exploreForYou"
                android:background="#6AB9B9B9"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.chip.ChipGroup
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:singleLine="true"
            app:singleSelection="true"
            app:layout_constraintTop_toBottomOf="@id/forYouTitleLayout">

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                app:textStartPadding="10dp"
                app:textEndPadding="10dp"
                android:textColor="@color/dark_text_color"
                android:text="Followed"/>

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                app:textStartPadding="10dp"
                app:textEndPadding="10dp"
                android:textColor="@color/dark_text_color"
                android:text="Trending"/>

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                app:textStartPadding="10dp"
                app:textEndPadding="10dp"
                android:textColor="@color/dark_text_color"
                android:text="First Category"/>

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                app:textStartPadding="10dp"
                app:textEndPadding="10dp"
                android:textColor="@color/dark_text_color"
                android:text="Second Category"/>
        </com.google.android.material.chip.ChipGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        app:layout_constraintTop_toBottomOf="@id/mixedBucketConstraintRoot"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/mixedBucketRecyclerView"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>