<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.jackandphantom.circularprogressbar.CircleProgressbar
        android:layout_width="155dp"
        android:layout_height="155dp"
        app:cpb_progress="50"
        android:layout_gravity="center"
        app:cpb_roundedCorner="true"
        android:elevation="2dp"
        app:cpb_foregroundProgressWidth="3"
        app:cpb_backgroundProgressColor="#C6C4C4"
        app:cpb_backgroundProgressWidth="3"
        app:cpb_foregroundProgressColor="@color/new_pink"
        app:cpb_touchEnabled="true"/>

    <androidx.cardview.widget.CardView
        android:layout_width="146dp"
        android:layout_height="146dp"
        android:layout_gravity="center"
        app:cardElevation="0dp"
        app:cardCornerRadius="70dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/woman_official"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>
</FrameLayout>