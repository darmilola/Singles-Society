<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.jackandphantom.circularprogressbar.CircleProgressbar
        android:layout_width="154dp"
        android:layout_height="154dp"
        app:cpb_progress="50"
        android:layout_gravity="center"
        app:cpb_roundedCorner="true"
        app:cpb_foregroundProgressWidth="3"
        app:cpb_backgroundProgressColor="#C6C4C4"
        app:cpb_backgroundProgressWidth="3"
        app:cpb_foregroundProgressColor="@color/society_pink"
        app:cpb_touchEnabled="true"/>

        <include
            layout="@layout/society_user_profile_picture"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:layout_gravity="center"
            android:id="@+id/profileInfoImageArena"/>

</FrameLayout>