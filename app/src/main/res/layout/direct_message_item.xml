<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:paddingRight="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="60dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="5dp"
        android:weightSum="9">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="2">

            <include
                layout="@layout/society_user_profile_picture"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:id="@+id/accountProfilePictureLayout"/>

        </LinearLayout>







        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="6">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/ggsanssemibold"
                android:id="@+id/message_connection_sender_name"
                android:text="Alisha Singh"
                android:textScaleX="1.14"
                android:textColor="@color/new_dark_text_color"
                android:textSize="16sp"/>

            <com.SinglesSociety.SocialText.RichTextController.RTextView
                android:id="@+id/message_connection_last_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Lorem Ipsum is simply dummy tex simply dummy text of the printing"
                android:textColor="@color/light_text_color"
                android:textSize="16sp"
                android:fontFamily="@font/ggsansregular"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_weight="1">


            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="5dp"
                android:id="@+id/message_connection_unread_count_layout"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:backgroundTint="#723CC171"
                android:background="@drawable/filled_circle"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="10:35"
                android:id="@+id/message_connection_timestamp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:fontFamily="@font/ggsansmedium"
                android:textColor="#989898"
                android:textSize="14sp"/>



        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:background="@color/light_gray" />
</androidx.constraintlayout.widget.ConstraintLayout>