<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@color/special_activity_background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="60dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="5dp"
        android:weightSum="9">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="2">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/woman_official"
                android:id="@+id/message_connection_sender_profile_image"
                android:scaleType="centerCrop"/>


        </LinearLayout>







        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="6">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/manropebold"
                android:id="@+id/message_connection_sender_name"
                android:text="Alisha Singh"
                android:textColor="@color/new_dark_text_color"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/message_connection_last_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:text="Also send files to yourself just select your own name from the owner fo the file then"
                android:fontFamily="@font/manropesemibold"
                android:textColor="@color/light_text_color"
                android:lineSpacingExtra="2dp"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_weight="1">


            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="5dp"
                android:id="@+id/message_connection_unread_count_layout"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:backgroundTint="#723CC171"
                android:background="@drawable/filled_circle"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="10:35"
                android:id="@+id/message_connection_timestamp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:fontFamily="@font/avenirmed"
                android:textColor="#989898"
                android:textSize="13sp"/>



        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="5dp"
        android:background="@color/light_gray" />
</androidx.constraintlayout.widget.ConstraintLayout>