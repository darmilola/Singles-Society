<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="5dp"
    android:layout_weight="7">

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:layout_weight="1">
    </View>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:layout_weight="1">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/userProfileImage"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/woman_official"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="6">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="13sp"
                android:lineSpacingExtra="4dp"
                android:layout_gravity="left|center"
                android:textColor="@color/dark_text_color"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_alignParentLeft="true"
                android:id="@+id/username"
                android:maxLength="20"
                android:fontFamily="@font/opensansbold"
                android:text="\@alexaOre0_"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="13sp"
                android:lineSpacingExtra="4dp"
                android:layout_gravity="right|center"
                android:textColor="@color/light_text_color"
                android:maxLines="5"
                android:ellipsize="end"
                android:layout_alignParentRight="true"
                android:id="@+id/commentTime"
                android:maxLength="10"
                android:fontFamily="@font/opensansregular"
                android:text="5 min"/>

        </RelativeLayout>


        <com.SinglesSociety.SocialText.RichTextController.RTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:id="@+id/postCommentText"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:background="@color/transparent"
            android:textSize="15sp"
            android:text="Lorem Ipsum is simply dummy tex simply dummy text of the printing"
            android:lineSpacingExtra="2dp"
            android:textColor="@color/new_dark_text_color"
            android:fontFamily="@font/opensans_regular"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp">
            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                app:tint="@color/pink"
                android:layout_marginTop="3dp"
                android:src="@drawable/like"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:textSize="12sp"
                android:lineSpacingExtra="4dp"
                android:textColor="@color/dark_text_color"
                android:maxLines="5"
                android:ellipsize="end"
                android:layout_marginLeft="3dp"
                android:maxLength="350"
                android:fontFamily="@font/opensansbold"
                android:text="(250)"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>