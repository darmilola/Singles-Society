<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    app:cardElevation="0dp"
    android:layout_marginBottom="5dp"
    android:layout_height="170dp"
    app:cardBackgroundColor="@color/special_activity_background"
    app:cardCornerRadius="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <com.scwang.wave.MultiWaveHeader
            android:id="@+id/waveHeader"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:scaleY="-1"
            app:mwhVelocity="1"
            app:mwhProgress="1"
            app:mwhIsRunning="false"
            app:mwhGradientAngle="45"
            app:mwhWaveHeight="50dp"
            app:mwhColorAlpha="0.45"
            android:rotation="180"
            app:mwhStartColor="#0383B1"
            app:mwhCloseColor="#3997F0"
            app:mwhWaves="MultiWave"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:background="@color/transparent">



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/eventHeader"
                    app:layout_constraintTop_toTopOf="parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/african_american_woman"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/eventLogo"
                        android:scaleType="centerCrop"
                        android:background="@drawable/filled_full_circle"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        android:gravity="center|left"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toStartOf="@id/eventEnter"
                        android:layout_marginLeft="5dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        app:layout_constraintStart_toEndOf="@id/eventLogo"
                        android:textColor="#F3F3F3"
                        android:fontFamily="@font/ggsanssemibold"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/enter_icon"
                        android:padding="7dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:tint="#F3F3F3"
                        android:id="@+id/eventEnter"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/eventHeader">

                    <View
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/dummyView"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        android:gravity="center|left"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginLeft="5dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/dummyView"
                        android:textColor="#F3F3F3"
                        android:fontFamily="@font/ggsansmedium"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor in Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor iLorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor in"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include layout="@layout/society_users_thumb_list"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="130dp"
                    android:layout_height="45dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:cornerRadius="20dp"
                    android:textColor="#F3F3F3"
                    app:strokeWidth="1dp"
                    android:layout_marginRight="10dp"
                    app:backgroundTint="@color/transparent"
                    app:strokeColor="#F3F3F3"
                    android:fontFamily="@font/ggsanssemibold"
                    android:text="Join Society"
                    android:textAllCaps="false"/>

            </androidx.constraintlayout.widget.ConstraintLayout>



        </LinearLayout>
    </FrameLayout>
</androidx.cardview.widget.CardView>