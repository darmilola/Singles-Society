<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:background="@color/special_activity_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="240dp"
    app:cardCornerRadius="7dp"
    app:cardElevation="0dp"
    android:layout_margin="7dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/interacial_friends"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Coffee date"
            android:gravity="center|left|bottom"
            android:textSize="25sp"
            android:paddingLeft="10dp"
            android:fontFamily="@font/avenirbold"
            android:paddingBottom="15dp"
            android:maxLines="2"
            android:background="@drawable/full_light_black_gradient"
            android:textColor="#ddffffff"/>

    </FrameLayout>


</androidx.cardview.widget.CardView>
 <TextView
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:background="@drawable/unread_background"
        android:gravity="center"
        android:textSize="11sp"
        android:layout_gravity="right|top"
        android:paddingBottom="3dp"
        android:text="25"
        android:fontFamily="@font/nunitoreg"
        android:textColor="@color/white"/>
</FrameLayout>