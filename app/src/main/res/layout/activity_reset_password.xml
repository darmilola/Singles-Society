<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/valentines_day"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/new_black_gradient"
        android:weightSum="5">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="70dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="25dp"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/clanbold"
                    android:gravity="center"
                    android:text="Reset Password"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/NewRegisterTextField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    app:boxStrokeColor="@color/colorAccent"
                    app:errorEnabled="true"
                    android:layout_marginTop="20dp"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/pink"
                    app:errorTextAppearance="@style/ErrorText">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/reset_password_password"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:hint="New Password"
                        android:maxLength="160"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:textColorHint="@color/lighter_text_color"
                        android:textSize="17dp"
                        android:textColor="@color/colorPrimary" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/NewRegisterTextField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    app:boxStrokeColor="@color/colorAccent"
                    app:errorEnabled="true"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/pink"
                    app:errorTextAppearance="@style/ErrorText">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/reset_password_password_retype"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:hint="Retype new Password"
                        android:maxLength="160"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:textSize="17dp"
                        android:textColorHint="@color/lighter_text_color"
                        android:textColor="@color/colorPrimary" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:text="Reset Password"
                    android:backgroundTint="@color/pink"
                    android:id="@+id/reset_password_reset_button"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>