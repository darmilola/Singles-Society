<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/live_event_engagement_gradient"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:tint="@color/white"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="7dp"
            android:gravity="center"
            android:backgroundTint="#ED4949"
            android:background="@drawable/danger_action_radius">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                app:tint="@color/white"
                android:rotation="130"
                android:padding="3dp"
                android:src="@drawable/phone_fill_icon"/>

        </LinearLayout>


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:tint="@color/white"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="7dp"
            android:background="@drawable/transparent_white_radius"
            android:src="@drawable/microphone_icon_filled"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:tint="#E4FFFFFF"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="7dp"
            android:background="@drawable/transparent_white_radius"
            android:src="@drawable/rorate_camera_icon"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:tint="#E9FFFFFF"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="8dp"
            android:background="@drawable/transparent_white_radius"
            android:src="@drawable/camera_media_video_icon"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:tint="#FFFFFF"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="9dp"
            android:background="@drawable/transparent_white_radius"
            android:src="@drawable/iconfinder_heart_favourite_favorite_love"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:gravity="center"
            android:background="@drawable/transparent_white_radius">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                app:tint="@color/white"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/view_eye_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/manropebold"
                android:textSize="13sp"
                android:text="785"/>

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>