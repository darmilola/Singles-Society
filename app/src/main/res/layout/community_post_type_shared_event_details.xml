<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:paddingRight="20dp"
    android:background="@color/special_activity_background"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/special_activity_background"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/topView"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintTop_toTopOf="parent"
                android:background="#D5D2D2"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/profileArea"
                app:layout_constraintBottom_toTopOf="@id/postContentLayout"
                app:layout_constraintTop_toBottomOf="@id/topView">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/accountProfilePicture"
                    app:layout_constraintEnd_toStartOf="@id/accountInfoRoot"
                    android:src="@drawable/woman_official"/>
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/accountInfoRoot"
                    android:gravity="center|left"
                    android:layout_marginLeft="3dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/accountProfilePicture">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="\@katieBrown"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/dark_text_color"
                        android:textSize="13sp"
                        android:fontFamily="@font/ggsanssemibold"/>

                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/profileArea"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                app:layout_constraintBottom_toTopOf="@id/bottomView"
                android:layout_marginBottom="15dp"
                android:id="@+id/postContentLayout">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <include layout="@layout/society_shared_post_content_area"
                        app:layout_constraintBottom_toTopOf="@id/eventDisplay"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/postTextView"/>

                    <include layout="@layout/event_layout_v2"
                        android:layout_height="200dp"
                        android:layout_width="match_parent"
                        android:id="@+id/eventDisplay"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        app:layout_constraintTop_toBottomOf="@id/postTextView"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/bottomView"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="#D5D2D2"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>