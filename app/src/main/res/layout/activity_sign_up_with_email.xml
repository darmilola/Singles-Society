<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/valentines_day"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/new_black_gradient"
        android:weightSum="5">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="25dp">

                    <FrameLayout
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:orientation="vertical"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:elevation="2dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/iconfinder_camera_photo_gallery"
                            android:layout_gravity="bottom|right"
                            android:paddingBottom="4dp"
                            android:tint="@color/white"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:id="@+id/select_profile_image_button"
                            android:backgroundTint="@color/pinkypinky"
                            android:background="@drawable/add_to_cart_background"/>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/signup_profile_image"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:src="@drawable/profileplaceholder"/>

                    </FrameLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/sign_up_firstname_layout"
                        style="@style/NewRegisterTextField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="5dp"
                        app:boxStrokeColor="@color/colorAccent"
                        app:errorEnabled="true"
                        app:errorTextAppearance="@style/ErrorText">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/sign_up_firstname"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:hint="Firstname"
                            android:maxLength="160"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textSize="17dp"
                            android:textColorHint="@color/lighter_text_color"
                            android:textColor="@color/colorPrimary" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/sign_up_lastname_layout"
                        style="@style/NewRegisterTextField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="5dp"
                        app:boxStrokeColor="@color/colorAccent"
                        app:errorEnabled="true"
                        app:errorTextAppearance="@style/ErrorText">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/sign_up_lastname"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:hint="Lastname"
                            android:maxLength="160"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textSize="17dp"
                            android:textColorHint="@color/lighter_text_color"
                            android:textColor="@color/colorPrimary" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/sign_up_email_layout"
                        style="@style/NewRegisterTextField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="5dp"
                        app:boxStrokeColor="@color/colorAccent"
                        app:errorEnabled="true"
                        app:errorTextAppearance="@style/ErrorText">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/sign_up_email"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:hint="Email"
                            android:maxLength="160"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textSize="17dp"
                            android:textColorHint="@color/lighter_text_color"
                            android:textColor="@color/colorPrimary" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/sign_up_password_layout"
                        style="@style/NewRegisterTextField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="5dp"
                        app:boxStrokeColor="@color/colorAccent"
                        app:errorEnabled="true"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="@color/pinkypinky"
                        app:errorTextAppearance="@style/ErrorText">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/sign_up_password"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:hint="Password"
                            android:maxLength="160"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:textSize="17dp"
                            android:textColorHint="@color/lighter_text_color"
                            android:textColor="@color/colorPrimary" />
                    </com.google.android.material.textfield.TextInputLayout>



                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:text="Sign Up"
                        android:textColor="@color/White"
                        android:backgroundTint="@color/pinkypinky"
                        android:id="@+id/signup_with_email_button"
                        android:textAllCaps="false"
                        android:textSize="15dp"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="already have account? Log In"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:padding="5dp"
                        android:textSize="12dp"
                        android:gravity="center"
                        android:fontFamily="@font/clannews"
                        android:id="@+id/sign_up_have_account"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>

            </ScrollView>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>