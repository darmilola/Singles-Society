<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="2"
    android:layout_marginTop="5dp"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:maxWidth="250dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_weight="1"
        android:textColor="@color/light_text_color"
        android:fontFamily="@font/manropesemibold"
        android:id="@+id/hashtagText"
        android:text="#teamPixelThankYou"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center|left"
        android:textSize="13sp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:id="@+id/hashtagTrending"
            android:src="@drawable/trend_up_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="#B03C3A3A"
            android:fontFamily="@font/manropesemibold"
            android:text="27,345 posts"
            android:gravity="center|right"
            android:id="@+id/hashtagPostCount"
            android:textSize="14sp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>