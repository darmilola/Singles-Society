<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/special_activity_background"
    tools:context=".fragments.WelcomeFragmentLandingPage">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <View
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="right|top"
            android:backgroundTint="#5FCEF6"
            android:layout_marginRight="-60dp"
            android:elevation="2dp"
            android:layout_marginTop="-150dp"
            android:background="@drawable/filled_full_circle"/>

        <View
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="right|center"
            android:backgroundTint="#27FA4375"
            android:layout_marginRight="-150dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/filled_full_circle"/>




        <View
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:layout_gravity="bottom|left"
            android:backgroundTint="#F3F3F3"
            android:layout_marginLeft="-130dp"
            android:background="@drawable/filled_full_circle"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="10dp">


            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:elevation="20dp"
                android:layout_gravity="center|top"
                android:src="@drawable/tower_of_london"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                android:rotationX="-15"
                android:rotationY="2"
                app:riv_corner_radius_bottom_left="200dp"
                app:riv_corner_radius_bottom_right="200dp"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/descText"
                android:layout_gravity="bottom"
                app:layout_constraintTop_toBottomOf="@id/img"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:gravity="center|left"
                    android:textSize="20sp"
                    android:ellipsize="end"
                    android:layout_marginRight="30dp"
                    android:textScaleX="1.08"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/new_dark_text_color"
                    android:fontFamily="@font/ggsansbold"
                    android:text="Welcome To App Society"/>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:textSize="18sp"
                    android:ellipsize="end"
                    android:textScaleX="1.08"
                    android:maxLines="2"
                    android:lineSpacingExtra="3dp"
                    android:textColor="@color/dark_text_color"
                    android:fontFamily="@font/ggsansmedium"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation "/>

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>




    </FrameLayout>




</LinearLayout>