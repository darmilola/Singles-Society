<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:background="@color/special_activity_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/special_activity_background"
        android:layout_marginLeft="3dp"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="-15dp"
            android:background="@drawable/community_post_background">


           <include layout="@layout/society_post_profile_arena"
               android:layout_height="wrap_content"
               android:layout_width="match_parent"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="5dp"
               android:layout_marginRight="20dp"
               android:id="@+id/profileArea"
               app:layout_constraintBottom_toTopOf="@id/postContentLayout"
               app:layout_constraintTop_toTopOf="parent">
           </include>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/profileArea"
                android:orientation="horizontal"
                android:id="@+id/postContentLayout">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <include layout="@layout/society_post_content_area"
                        app:layout_constraintBottom_toTopOf="@id/eventDisplay"
                        app:layout_constraintTop_toTopOf="parent"
                        android:paddingLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/postTextView"/>



                    <include layout="@layout/event_layout_v2"
                        android:layout_height="200dp"
                        android:layout_width="match_parent"
                        android:id="@+id/eventDisplay"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@id/postTextView"
                        app:layout_constraintBottom_toTopOf="@id/reactionCtaLayout"/>


                    <include layout="@layout/society_post_reaction_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="25dp"
                        android:layout_marginLeft="10dp"
                        app:layout_constraintTop_toBottomOf="@id/eventDisplay"
                        android:id="@+id/reactionCtaLayout"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </FrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>