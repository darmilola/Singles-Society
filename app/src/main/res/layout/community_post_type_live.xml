<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:background="@color/special_activity_background"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/special_activity_background"
        android:layout_marginLeft="3dp"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="-15dp"
            android:background="@drawable/community_post_background">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:id="@+id/profileArea"
                app:layout_constraintBottom_toTopOf="@id/postContentLayout"
                app:layout_constraintTop_toTopOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginLeft="5dp"
                    app:civ_border_width="0.5dp"
                    android:id="@+id/accountProfilePicture"
                    app:layout_constraintEnd_toStartOf="@id/accountInfoRoot"
                    app:civ_border_color="#FA4375"
                    android:src="@drawable/woman_official"/>
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/accountInfoRoot"
                    android:gravity="center|left"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/accountProfilePicture">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Katie Allens"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="#303030"
                        android:textSize="15sp"
                        android:fontFamily="@font/opensans_bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@The Space Name Goes here"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/light_text_color"
                        android:textSize="12sp"
                        android:fontFamily="@font/opensansregular"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/lighter_text_color"
                        android:fontFamily="@font/opensans_regular"
                        android:textSize="12sp"
                        android:text="45m"
                        android:gravity="center"/>

                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_gravity="center"
                        android:rotation="90"
                        app:tint="@color/dark_text_color"
                        android:src="@drawable/overflow_menu_icon"/>

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/profileArea"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:id="@+id/postContentLayout">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.SinglesSociety.SocialText.RichTextController.RTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:id="@+id/postTextView"
                        android:background="@color/transparent"
                        android:textSize="15sp"
                        android:lineSpacingExtra="2dp"
                        android:fontFamily="@font/opensansreg"
                        android:textColor="#303030"
                        android:maxLines="5"
                        android:paddingLeft="10dp"
                        android:text="The implosion of a submersible tourin board, has prompted questions about the regulations overseeing such voyages â€” and whether the vehicle itself was safe.On Friday, the company responsible for the tour, OceanGate Expeditions, defended the decisions of its chief executive Stockton Rush, who died on board the submersible."
                        app:layout_constraintBottom_toTopOf="@id/eventDisplay"
                        app:layout_constraintTop_toTopOf="parent"/>



                    <include layout="@layout/event_layout_v2"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:id="@+id/eventDisplay"
                        android:layout_marginRight="15dp"
                        app:layout_constraintTop_toBottomOf="@id/postTextView"
                        app:layout_constraintBottom_toTopOf="@id/reactionCtaLayout"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        android:paddingLeft="15dp"
                        android:paddingRight="25dp"
                        app:layout_constraintTop_toBottomOf="@id/eventDisplay"
                        android:id="@+id/reactionCtaLayout">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center|left">


                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                app:tint="@color/new_pink"
                                android:src="@drawable/love_like_icon"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:text="100k"
                                android:layout_marginLeft="5dp"
                                android:textSize="14sp"
                                android:textColor="@color/dark_text_color"
                                android:fontFamily="@font/opensans_semi_bold"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/commentLayout"
                            android:orientation="horizontal"
                            android:gravity="center">


                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                app:tint="@color/dark_text_color"
                                android:src="@drawable/chat_circle_icon"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:text="400"
                                android:layout_marginLeft="4dp"
                                android:textSize="14sp"
                                android:textColor="@color/dark_text_color"
                                android:fontFamily="@font/opensans_semi_bold"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center|right">


                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                app:tint="@color/dark_text_color"
                                android:src="@drawable/view_icon"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:text="70"
                                android:layout_marginLeft="5dp"
                                android:textSize="14sp"
                                android:textColor="@color/dark_text_color"
                                android:fontFamily="@font/opensans_semi_bold"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center|right">


                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                app:tint="@color/dark_text_color"
                                android:src="@drawable/share_outline_icon"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:text="70"
                                android:layout_marginLeft="5dp"
                                android:textSize="14sp"
                                android:textColor="@color/dark_text_color"
                                android:fontFamily="@font/opensans_semi_bold"/>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </FrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>