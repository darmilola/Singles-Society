<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="4"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:background="@drawable/love_gradient">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="20dp"
            android:id="@+id/backButton"
            android:tint="@color/white"
            android:src="@drawable/arrow_arrows_back_direction_left_icon"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:id="@+id/logo_root"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:id="@+id/logo_image"
                android:tint="@color/white"
                android:src="@drawable/muzmatch"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:id="@+id/logo_text"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:text="Single Society"
                android:fontFamily="@font/kumelian"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:text="Welcome Back"
            android:layout_marginTop="40dp"
            android:layout_gravity="bottom"
            android:fontFamily="@font/nunitobold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:textColor="#EFEFEF"
            android:layout_marginBottom="10dp"
            android:text="Log into your account to continue"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/manropemedium"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:background="#f2f2f3"
        android:weightSum="5">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="25dp">





                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/login_email_layout"
                    style="@style/NewRegisterTextField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="10dp"
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/ErrorText">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/login_email"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:hint="Email"
                        android:maxLength="160"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textSize="17sp"
                        android:fontFamily="@font/manropemedium"
                        android:textColorHint="@color/lighter_text_color"
                        android:textColor="@color/dark_gray" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/login_password_layout"
                    style="@style/NewRegisterTextField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="5dp"
                    app:errorEnabled="true"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/pink"
                    android:layout_marginBottom="-20dp"
                    app:errorTextAppearance="@style/ErrorText">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/login_password"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:hint="Password"
                        android:maxLength="160"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:textColorHint="@color/lighter_text_color"
                        android:textColor="@color/dark_gray"
                        android:textSize="17sp"
                        android:fontFamily="@font/manropemedium"/>
                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Forgot Password?"
                    android:padding="5dp"
                    android:textSize="13sp"
                    android:id="@+id/login_forgot_password"
                    android:gravity="right"
                    android:fontFamily="@font/nunitobold"
                    android:textColor="@color/pink"/>







                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/login_with_email_button"
                    android:layout_height="45dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/filled_button_background"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/nunitobold"
                        android:text="Login"/>
                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:weightSum="5">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0.5dp"
                        android:layout_weight="2"
                        android:background="#BCBABA"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Or"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:fontFamily="@font/nunitoreg"
                        android:textColor="#9C9B9B"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0.5dp"
                        android:layout_weight="2"
                        android:background="#BCBABA"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/signup_with_google_button"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/sso_outline_circle"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="7dp"
                        android:src="@drawable/google"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:textColor="@color/dark_text_color"
                        android:textSize="15sp"
                        android:text="Continue With Google"
                        android:fontFamily="@font/nunitobold"/>
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="don't have an account? Register"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:textSize="12sp"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:fontFamily="@font/avenirbold"
                    android:id="@+id/login_dont_have_account"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</LinearLayout>