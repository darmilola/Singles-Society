<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ctr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    ctr:layout_constraintBottom_toBottomOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.CreatePostTypeText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/topBar"
        android:layout_weight="0.8"
        ctr:cardBackgroundColor="@color/special_activity_background"
        android:background="@color/special_activity_background"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="12dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:id="@+id/exitButton"
                app:tint="@color/light_text_color"
                android:src="@drawable/exit_icon"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent">

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

        </LinearLayout>

    </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="8.2"
        android:layout_weight="8.2">


        <com.SinglesSociety.SocialText.RichTextController.RTEditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/editView"
            android:layout_weight="7.2"
            android:gravity="top|left"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/transparent_background"
            android:layout_marginTop="20dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/createPostToolbarLayout"
            android:layout_height="0dp">

            <com.SinglesSociety.SocialText.RichTextController.HorizontalRTToolbar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                ctr:setActionButtonSize="100dp"
                android:gravity="center"
                android:background="@color/transparent"
                android:id="@+id/createPostToolbar"
                ctr:setMentionActionSrc="@drawable/mention_thin_icon"
                ctr:setHashTagActionSrc="@drawable/hashtag_grid"
                ctr:setActionButtonSrcTint="@color/dark_text_color"
                ctr:setActionSelectedButtonSrcTint="@color/white"
                ctr:setBoldActionSrc="@drawable/bold_text_icon"
                ctr:setBulletActionSrc="@drawable/bullets_thin_icon"
                ctr:setSizeIncActionSrc="@drawable/letter_a_2"
                ctr:setItalicizeActionSrc="@drawable/italic_text_edit_editor_icon"
                ctr:setLinkActionSrc="@drawable/link_thin_icon"
                ctr:setSelectedActionBackground="@drawable/transparent_background"
                ctr:setUnselectedActionBackground="@drawable/transparent_background"/>



        </LinearLayout>



    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/bottomBar"
        android:layout_weight="1"
        android:background="@color/special_activity_background"
        ctr:cardBackgroundColor="@color/special_activity_background"
        app:cardElevation="12dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:weightSum="1">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    app:backgroundTint="@color/new_pink"
                    android:text="Post"
                    android:textAllCaps="false"
                    android:elevation="0dp"
                    app:elevation="0dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/manropebold"
                    app:cornerRadius="7dp"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>