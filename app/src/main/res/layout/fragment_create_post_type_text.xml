<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/special_activity_background"
    tools:context=".fragments.CreatePostTypeText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/topBar"
        android:layout_weight="0.8"
        app:cardBackgroundColor="@color/special_activity_background"
        android:background="@color/special_activity_background"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="12dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:id="@+id/exitButton"
                app:tint="@color/light_text_color"
                android:src="@drawable/exit_icon"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent">

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

        </LinearLayout>

    </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="8.2"
        android:layout_marginTop="10dp"
        android:layout_weight="8.2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:id="@+id/uploadMediaLayout"
            app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal"
            android:background="@drawable/dotted_line_background">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/plus_circle_fill_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add photos or video"
                android:layout_marginLeft="7dp"
                android:textSize="13sp"
                android:textColor="@color/dark_text_color"
                android:fontFamily="@font/manropeextrabold"/>
        </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="bottom"
                android:background="#9EE62056"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
  </androidx.constraintlayout.widget.ConstraintLayout>


        <com.SinglesSociety.SocialText.RichTextController.RTEditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/uploadMediaLayout"
            app:layout_constraintBottom_toTopOf="@id/createPostToolbarLayout"
            android:id="@+id/editView"
            android:hint="Write Something here..."
            android:textColorHint="@color/light_text_color"
            android:gravity="top|left"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/transparent_background"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:lineSpacingExtra="2dp"
            android:textColor="@color/dark_text_color"
            android:fontFamily="@font/manropemedium"/>


        <LinearLayout
            android:layout_width="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/createPostToolbarLayout"
            android:layout_marginRight="30dp"
            android:layout_height="70dp">

            <com.SinglesSociety.SocialText.RichTextController.HorizontalRTToolbar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:setActionButtonSize="100dp"
                android:gravity="center"
                android:background="@color/transparent"
                android:id="@+id/createPostToolbar"
                app:setMentionActionSrc="@drawable/mention_thin_icon"
                app:setHashTagActionSrc="@drawable/hashtag_grid"
                app:setActionButtonSrcTint="@color/dark_text_color"
                app:setActionSelectedButtonSrcTint="@color/white"
                app:setBoldActionSrc="@drawable/bold_text_icon"
                app:setBulletActionSrc="@drawable/bullets_thin_icon"
                app:setSizeIncActionSrc="@drawable/letter_a_2"
                app:setItalicizeActionSrc="@drawable/italic_text_edit_editor_icon"
                app:setLinkActionSrc="@drawable/link_thin_icon"
                app:setSelectedActionBackground="@drawable/transparent_background"
                app:setUnselectedActionBackground="@drawable/transparent_background"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/bottomBar"
        android:layout_weight="1"
        android:background="@color/special_activity_background"
        app:cardBackgroundColor="@color/special_activity_background"
        app:cardElevation="12dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:weightSum="1">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    app:backgroundTint="@color/new_pink"
                    android:text="Post"
                    android:textAllCaps="false"
                    android:elevation="0dp"
                    app:elevation="0dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/manropebold"
                    app:cornerRadius="7dp"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    </LinearLayout>


    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/right_labels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="85dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:elevation="0dp"
        app:fab_addButtonColorNormal="@color/white"
        app:fab_addButtonColorPressed="@color/new_pink"
        app:fab_addButtonPlusIconColor="@color/new_pink"
        app:fab_addButtonSize="mini"
        app:fab_labelsPosition="right">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/white"
            android:tint="@color/new_pink"
            app:fab_size="normal"
            android:src="@drawable/trend_outline_icon"
            android:paddingTop="3dp"
            app:fab_title="Label on the right"
            app:fab_colorPressed="@color/new_pink"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/white"
            app:fab_size="mini"
            android:paddingTop="3dp"
            android:tint="@color/new_pink"
            android:src="@drawable/trend_outline_icon"
            app:fab_title="Another one on the right"
            app:fab_colorPressed="@color/new_pink"/>

    </com.getbase.floatingactionbutton.FloatingActionsMenu>




</FrameLayout>