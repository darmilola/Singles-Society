<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="360dp"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="0dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/asian_lady"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/lighter_black_gradient"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/light_black_gradient"
                android:orientation="vertical">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="bottom"
                        android:id="@+id/eventCreator"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:gravity="left|center">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            app:civ_border_width="0.5dp"
                            android:id="@+id/accountProfilePicture"
                            app:layout_constraintEnd_toStartOf="@id/accountInfoRoot"
                            app:civ_border_color="@color/special_activity_background"
                            android:src="@drawable/woman_official"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Zaynab Sayiddah A."
                            android:maxLines="1"
                            android:layout_marginLeft="5dp"
                            android:ellipsize="end"
                            android:textColor="@color/special_activity_background"
                            android:textSize="13sp"
                            android:fontFamily="@font/opensans_bold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:background="@drawable/filled_circle"
                        android:backgroundTint="@color/white"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:tint="#FAA65C"
                            android:src="@drawable/star_favourite_icon"/>
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Arrival Upgrade your setup now, you can put your event title here"
        android:gravity="center|left|bottom"
        android:textSize="15sp"
        android:layout_gravity="bottom"
        android:id="@+id/eventTitle"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toTopOf="@id/eventCreator"
        android:fontFamily="@font/opensans_bold"
        android:maxLines="4"
        android:ellipsize="end"
        android:textColor="@color/new_dark_text_color"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                app:tint="@color/lighter_text_color"
                android:layout_marginRight="1dp"
                android:src="@drawable/schedule_event_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nov 10 2022"
                android:fontFamily="@font/opensans_semi_bold"
                android:textColor="@color/lighter_text_color"
                android:layout_marginLeft="5dp"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                app:tint="@color/lighter_text_color"
                android:layout_marginRight="1dp"
                android:src="@drawable/time_ui_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08: 00 pm"
                android:fontFamily="@font/opensans_semi_bold"
                android:textColor="@color/lighter_text_color"
                android:layout_marginLeft="5dp"
                android:textSize="14sp"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center|left"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/white"
                android:src="@drawable/enthusiastic"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:layout_marginLeft="-8dp"
                android:layout_gravity="center|left"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/white"
                android:src="@drawable/young_man"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="-8dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center|left"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/white"
                android:src="@drawable/business_woman"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center|left"
                app:civ_border_width="2dp"
                android:layout_marginLeft="-8dp"
                app:civ_border_color="@color/white"
                android:src="@drawable/woman_official"/>
            <LinearLayout
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:backgroundTint="@color/white"
                android:background="@drawable/filled_full_circle"
                android:gravity="center"
                android:layout_marginLeft="-10dp">

                <TextView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/opensans_semi_bold"
                    android:backgroundTint="@color/new_pink"
                    android:text="+56"
                    android:background="@drawable/filled_full_circle"
                    android:src="@drawable/woman_official"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/pink_outline_circle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="-10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="13sp"
                android:layout_marginRight="10dp"
                android:textColor="@color/new_pink"
                android:fontFamily="@font/opensans_bold"
                android:backgroundTint="@color/new_pink"
                android:text="Buy Ticket"
                android:src="@drawable/woman_official"/>

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:tint="@color/new_pink"
                android:src="@drawable/chevron_right_arrow_icon"/>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginTop="15dp"
    android:background="#D5D2D2"/>


</LinearLayout>