<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/special_activity_background"
    android:orientation="vertical">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="50dp"
        android:id="@+id/backButton"
        android:layout_marginLeft="16dp"
        android:elevation="20dp"
        app:tint="@color/special_activity_background"
        android:src="@drawable/arrow_arrows_back_direction_left_icon"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="6">



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.3">


            <View
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="right|center"
                android:backgroundTint="#27FA4375"
                android:layout_marginRight="-150dp"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/filled_full_circle"/>




            <View
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:layout_gravity="bottom|left"
                android:backgroundTint="#F3F3F3"
                android:layout_marginLeft="-130dp"
                android:background="@drawable/filled_full_circle"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="10dp">


                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:elevation="20dp"
                    android:layout_gravity="center|top"
                    android:src="@drawable/tower_of_london"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="parent"
                    android:rotationX="-15"
                    android:rotationY="2"
                    app:riv_corner_radius_bottom_left="200dp"
                    app:riv_corner_radius_bottom_right="200dp"/>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/descText"
                    android:layout_gravity="bottom"
                    app:layout_constraintTop_toBottomOf="@id/img"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:gravity="center|left"
                        android:textSize="20sp"
                        android:ellipsize="end"
                        android:layout_marginRight="30dp"
                        android:textScaleX="1.08"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/new_dark_text_color"
                        android:fontFamily="@font/ggsansbold"
                        android:text="Welcome To App Society"/>



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:textSize="18sp"
                        android:ellipsize="end"
                        android:textScaleX="1.08"
                        android:maxLines="1"
                        android:lineSpacingExtra="3dp"
                        android:textColor="@color/dark_text_color"
                        android:fontFamily="@font/ggsansmedium"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation "/>

                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>




        </FrameLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.7"
            android:layout_gravity="top"
            android:gravity="bottom"
            android:orientation="vertical"
            android:weightSum="5">



            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">





                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/sign_up_firstname_layout"
                            style="@style/NewRegisterTextField"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1"
                            app:errorEnabled="true"
                            app:errorTextAppearance="@style/ErrorText">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/sign_up_firstname"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:hint="Firstname"
                                android:maxLength="160"
                                android:inputType="text"
                                android:maxLines="1"
                                android:textSize="16sp"
                                android:fontFamily="@font/ggsanssemibold"
                                android:textColorHint="@color/light_text_color"
                                android:textColor="@color/dark_text_color" />
                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/sign_up_lastname_layout"
                            style="@style/NewRegisterTextField"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            app:errorEnabled="true"
                            app:errorTextAppearance="@style/ErrorText">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/sign_up_lastname"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:hint="Lastname"
                                android:maxLength="160"
                                android:inputType="text"
                                android:maxLines="1"
                                android:textSize="16sp"
                                android:fontFamily="@font/ggsanssemibold"
                                android:textColorHint="@color/light_text_color"
                                android:textColor="@color/dark_text_color" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>



                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/sign_up_email_layout"
                        style="@style/NewRegisterTextField"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginEnd="5dp"
                        app:errorEnabled="true"
                        app:errorTextAppearance="@style/ErrorText">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/sign_up_email"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Email"
                            android:maxLength="160"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textSize="16sp"
                            android:fontFamily="@font/ggsanssemibold"
                            android:textColorHint="@color/light_text_color"
                            android:textColor="@color/dark_text_color"/>
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/sign_up_password_layout"
                        style="@style/NewRegisterTextField"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="5dp"
                        app:errorEnabled="true"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="@color/light_text_color"
                        app:errorTextAppearance="@style/ErrorText">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/sign_up_password"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Password"
                            android:maxLength="160"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:textSize="16sp"
                            android:fontFamily="@font/ggsanssemibold"
                            android:textColorHint="@color/light_text_color"
                            android:textColor="@color/dark_text_color"/>
                    </com.google.android.material.textfield.TextInputLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Must be at least 8 character"
                        android:padding="5dp"
                        android:gravity="left"
                        android:textSize="11sp"
                        android:textScaleX="1.08"
                        android:fontFamily="@font/ggsanssemibold"
                        android:textColor="@color/dark_text_color"/>







                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:textSize="17sp"
                        android:text="Sign Up"
                        android:id="@+id/signUpWithEmailButton"
                        app:iconTint="@color/special_activity_background"
                        android:paddingLeft="20dp"
                        app:strokeColor="@color/transparent"
                        app:strokeWidth="0.5dp"
                        android:textScaleX="1.08"
                        android:fontFamily="@font/ggsanssemibold"
                        app:backgroundTint="@color/society_pink"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:textColor="@color/special_activity_background"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/already_have_account"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:padding="5dp"
                        android:textSize="11sp"
                        android:textScaleX="1.08"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:fontFamily="@font/opensansbold"
                        android:id="@+id/sign_up_have_account"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>

            </ScrollView>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>