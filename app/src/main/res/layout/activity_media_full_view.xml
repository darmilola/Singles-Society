<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/new_dark_text_color"
    tools:context=".MediaFullViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/createPostTopBar"
        android:gravity="center"
        android:elevation="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="12dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/cancelCreatePost"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:id="@+id/exitButton"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/community_post_background"
                    app:tint="@color/special_activity_background"
                    android:src="@drawable/cancel_icon"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:layout_height="match_parent">


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/attachmentImageView"
        android:src="@drawable/young_man"/>

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/attachmentVideoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:resize_mode="fixed_height"
        android:visibility="gone"
        app:surface_type="texture_view"
        app:use_controller="false"/>

</FrameLayout>