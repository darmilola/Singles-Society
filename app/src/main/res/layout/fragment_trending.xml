<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.TrendingFragment"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:paddingTop="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="#FA4375">

        <com.mindinventory.AutoScrollCircularPagerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/exploreHeader"
            android:orientation="horizontal"
            app:auto_scroll_delay="5000"
            app:dot_margin="20dp"
            app:selected_dot_color="#FA4375"
            app:unselected_dot_color="@color/light_text_color"
            app:dot_gravity="bottom"/>

    </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/forYouDiscoverRoot">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Discover"
                    android:id="@+id/exploreForYouDiscover"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/dark_text_color"
                    android:layout_gravity="left"
                    android:textSize="20sp"
                    android:fontFamily="@font/kumelianbold"/>


                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/exploreForYouDiscoverViewAll"
                    app:layout_constraintLeft_toRightOf="@id/exploreForYouDiscover"
                    android:background="#6AB9B9B9"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="2dp"
                    android:text="View all"
                    android:padding="8dp"
                    android:backgroundTint="#97FA4375"
                    android:id="@+id/exploreForYouDiscoverViewAll"
                    android:background="@drawable/pink_outline_circle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@color/new_pink"
                    android:textSize="11sp"
                    android:fontFamily="@font/manropesemibold"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:scrollbars="none">

                <com.google.android.material.chip.ChipGroup
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:singleLine="true"
                    android:id="@+id/exploreDiscoverChipGroup"
                    app:singleSelection="true"
                    app:selectionRequired="true"
                    app:checkedChip="@id/followed"
                    app:layout_constraintTop_toBottomOf="@id/forYouTitleLayout">

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        app:textStartPadding="10dp"
                        app:textEndPadding="10dp"
                        android:id="@+id/followed"
                        android:textColor="@color/chip_text_color"
                        android:text="Followed"/>

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        app:textStartPadding="10dp"
                        app:textEndPadding="10dp"
                        android:textColor="@color/chip_text_color"
                        android:id="@+id/trending"
                        android:text="Trending"/>

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        app:textStartPadding="10dp"
                        app:textEndPadding="10dp"
                        android:textColor="@color/chip_text_color"
                        android:id="@+id/first"
                        android:text="First Category"/>

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        app:textStartPadding="10dp"
                        app:textEndPadding="10dp"
                        android:id="@+id/second"
                        android:textColor="@color/chip_text_color"
                        android:text="Second Category"/>



                </com.google.android.material.chip.ChipGroup>



            </HorizontalScrollView>

            <me.relex.circleindicator.CircleIndicator2
                android:id="@+id/forYouDiscoverIndicator"
                android:layout_width="match_parent"
                app:ci_drawable="@drawable/pink_radius"
                android:layout_height="15dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:id="@+id/exploreDiscoverRecyclerView"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/PopularRoot">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Popular"
                    android:id="@+id/explorePopular"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/dark_text_color"
                    android:layout_gravity="left"
                    android:textSize="20sp"
                    android:fontFamily="@font/kumelianbold"/>


                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/explorePopularViewAll"
                    app:layout_constraintLeft_toRightOf="@id/explorePopular"
                    android:background="#6AB9B9B9"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="2dp"
                    android:text="View all"
                    android:padding="8dp"
                    android:backgroundTint="#97FA4375"
                    android:id="@+id/explorePopularViewAll"
                    android:background="@drawable/pink_outline_circle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@color/new_pink"
                    android:textSize="11sp"
                    android:fontFamily="@font/manropesemibold"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/trending_hashtags"
                android:layout_marginRight="5dp"
                tools:itemCount="5"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:id="@+id/explorePopularHashtagRecyclerView"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/forYouRoot">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="For You"
                    android:id="@+id/exploreForYou"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/dark_text_color"
                    android:layout_gravity="left"
                    android:textSize="20sp"
                    android:fontFamily="@font/kumelianbold"/>


                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/exploreForYouViewAll"
                    app:layout_constraintLeft_toRightOf="@id/exploreForYou"
                    android:background="#6AB9B9B9"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="2dp"
                    android:text="View all"
                    android:padding="8dp"
                    android:backgroundTint="#97FA4375"
                    android:id="@+id/exploreForYouViewAll"
                    android:background="@drawable/pink_outline_circle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@color/new_pink"
                    android:textSize="11sp"
                    android:fontFamily="@font/manropesemibold"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:scrollbars="none">

                <com.google.android.material.chip.ChipGroup
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:singleLine="true"
                    android:id="@+id/exploreForYouChipGroup"
                    app:singleSelection="true"
                    app:selectionRequired="true"
                    app:checkedChip="@id/followed"
                    app:layout_constraintTop_toBottomOf="@id/forYouTitleLayout">

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        app:textStartPadding="10dp"
                        app:textEndPadding="10dp"
                        android:textColor="@color/chip_text_color"
                        android:text="Followed"/>

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        app:textStartPadding="10dp"
                        app:textEndPadding="10dp"
                        android:textColor="@color/chip_text_color"
                        android:text="Trending"/>

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        app:textStartPadding="10dp"
                        app:textEndPadding="10dp"
                        android:textColor="@color/chip_text_color"
                        android:text="First Category"/>

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        app:textStartPadding="10dp"
                        app:textEndPadding="10dp"
                        android:textColor="@color/chip_text_color"
                        android:text="Second Category"/>

                </com.google.android.material.chip.ChipGroup>



            </HorizontalScrollView>

            <me.relex.circleindicator.CircleIndicator2
                android:id="@+id/forYouIndicator"
                android:layout_width="match_parent"
                app:ci_drawable="@drawable/pink_radius"
                android:layout_height="15dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:id="@+id/exploreForYouRecyclerView"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/forYouEventsRoot">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Events"
                    android:id="@+id/exploreForYouEvents"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/dark_text_color"
                    android:layout_gravity="left"
                    android:textSize="20sp"
                    android:fontFamily="@font/kumelianbold"/>


                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/exploreForYouEventsViewAll"
                    app:layout_constraintLeft_toRightOf="@id/exploreForYouEvents"
                    android:background="#6AB9B9B9"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="2dp"
                    android:text="View all"
                    android:padding="8dp"
                    android:backgroundTint="#97FA4375"
                    android:id="@+id/exploreForYouEventsViewAll"
                    android:background="@drawable/pink_outline_circle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@color/new_pink"
                    android:textSize="11sp"
                    android:fontFamily="@font/manropesemibold"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:scrollbars="none">

                <com.google.android.material.chip.ChipGroup
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:singleLine="true"
                    android:id="@+id/exploreEventsChipGroup"
                    app:singleSelection="true"
                    app:selectionRequired="true"
                    app:checkedChip="@id/followed"
                    app:layout_constraintTop_toBottomOf="@id/forYouTitleLayout">

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        app:textStartPadding="10dp"
                        app:textEndPadding="10dp"
                        android:textColor="@color/chip_text_color"
                        android:text="Followed"/>

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        app:textStartPadding="10dp"
                        app:textEndPadding="10dp"
                        android:textColor="@color/chip_text_color"
                        android:text="Trending"/>

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        app:textStartPadding="10dp"
                        app:textEndPadding="10dp"
                        android:textColor="@color/chip_text_color"
                        android:text="First Category"/>

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        app:textStartPadding="10dp"
                        app:textEndPadding="10dp"
                        android:textColor="@color/chip_text_color"
                        android:text="Second Category"/>



                </com.google.android.material.chip.ChipGroup>



</HorizontalScrollView>

            <me.relex.circleindicator.CircleIndicator2
                android:id="@+id/forYouEventsIndicator"
                android:layout_width="match_parent"
                app:ci_drawable="@drawable/pink_radius"
                android:layout_height="15dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:id="@+id/exploreForYouEventsRecyclerView"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"/>


        </LinearLayout>





    </LinearLayout>

</androidx.core.widget.NestedScrollView>

</LinearLayout>