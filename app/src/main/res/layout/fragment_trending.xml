<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:paddingTop="10dp"
    android:background="@color/special_activity_background"
    tools:context=".fragments.TrendingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/pink">

        <com.mindinventory.AutoScrollCircularPagerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/exploreHeader"
            android:orientation="horizontal"
            app:auto_scroll_delay="5000"
            app:dot_margin="20dp"
            app:selected_dot_color="@color/pink"
            app:unselected_dot_color="@color/light_text_color"
            app:dot_gravity="bottom"/>

    </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="5dp"
            android:text="Explore your Interest..."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/avenirmed"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            tools:itemCount="6"
            android:id="@+id/exploreItemRecyclerview"
            android:layout_marginBottom="20dp"
            tools:listitem="@layout/explore_item"
            android:layout_marginTop="3dp"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>