<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:paddingTop="10dp"
    android:background="@color/white"
    tools:context=".fragments.TrendingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="#FA4375">

        <com.mindinventory.AutoScrollCircularPagerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/exploreHeader"
            android:orientation="horizontal"
            app:auto_scroll_delay="5000"
            app:dot_margin="20dp"
            app:selected_dot_color="#FA4375"
            app:unselected_dot_color="@color/light_text_color"
            app:dot_gravity="bottom"/>

    </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Discover"
                android:id="@+id/exploreDiscover"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/dark_text_color"
                android:layout_gravity="left"
                android:textSize="20sp"
                android:fontFamily="@font/kumelianbold"/>


            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/exploreDiscoverViewAll"
                app:layout_constraintLeft_toRightOf="@id/exploreDiscover"
                android:background="#6AB9B9B9"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="7dp"
                android:text="View all"
                android:padding="8dp"
                android:backgroundTint="#97FA4375"
                android:id="@+id/exploreDiscoverViewAll"
                android:background="@drawable/pink_outline_circle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="#B5FA4375"
                android:textSize="10sp"
                android:fontFamily="@font/manropesemibold"/>

        </androidx.constraintlayout.widget.ConstraintLayout>



        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            tools:itemCount="2"
            android:id="@+id/exploreItemRecyclerview"
            android:layout_marginBottom="20dp"
            tools:listitem="@layout/explore_item"
            android:layout_marginTop="10dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Upcoming"
                android:id="@+id/exploreUpcomingLive"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/dark_text_color"
                android:layout_gravity="left"
                android:textSize="20sp"
                android:fontFamily="@font/kumelianbold"/>


            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/exploreUpcomingLiveViewAll"
                app:layout_constraintLeft_toRightOf="@id/exploreUpcomingLive"
                android:background="#6AB9B9B9"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="7dp"
                android:text="View all"
                android:padding="8dp"
                android:backgroundTint="#97FA4375"
                android:id="@+id/exploreUpcomingLiveViewAll"
                android:background="@drawable/pink_outline_circle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="#B5FA4375"
                android:textSize="10sp"
                android:fontFamily="@font/manropesemibold"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            tools:itemCount="2"
            android:id="@+id/exploreUpcomingLiveRecyclerview"
            android:layout_marginBottom="20dp"
            tools:listitem="@layout/explore_item_type_live"
            android:layout_marginTop="10dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:cardElevation="0dp"
            android:visibility="gone"
            app:cardCornerRadius="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:backgroundTint="#FA4375"
                android:id="@+id/createNewSpaceCta"
                android:background="@drawable/love_gradient">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:src="@drawable/add_icon"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:tint="#ddffffff" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#ddffffff"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:fontFamily="@font/nunitobold"
                    android:text="Create New Space." />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            android:visibility="gone"
            tools:itemCount="6"
            android:id="@+id/mySpacesRecyclerview"
            android:layout_marginBottom="20dp"
            tools:listitem="@layout/explore_item"
            android:layout_marginTop="3dp"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>