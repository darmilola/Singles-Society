<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:paddingTop="10dp"
    android:background="@color/special_activity_background"
    tools:context=".fragments.TrendingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="0dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="#FA4375">

        <com.mindinventory.AutoScrollCircularPagerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/exploreHeader"
            android:orientation="horizontal"
            app:auto_scroll_delay="5000"
            app:dot_margin="20dp"
            app:selected_dot_color="#FA4375"
            app:unselected_dot_color="@color/light_text_color"
            app:dot_gravity="bottom"/>

    </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="35dp"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Explore your Interest..."
                android:textSize="16sp"
                android:layout_alignParentLeft="true"
                android:textColor="@color/black"
                android:layout_gravity="left"
                android:fontFamily="@font/avenirmed"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:tint="@color/new_pink"
                android:id="@+id/exploreSearchIcon"
                android:layout_alignParentRight="true"
                android:src="@drawable/search_icon"/>

        </RelativeLayout>



        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            tools:itemCount="6"
            android:id="@+id/exploreItemRecyclerview"
            android:layout_marginBottom="20dp"
            tools:listitem="@layout/explore_item"
            android:layout_marginTop="3dp"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="5dp"
            android:text="My Vibes..."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/avenirmed"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:backgroundTint="#FA4375"
                android:id="@+id/createNewSpaceCta"
                android:background="@drawable/love_gradient">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:src="@drawable/add_icon"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:tint="#ddffffff" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#ddffffff"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:fontFamily="@font/nunitobold"
                    android:text="Create New Space." />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            tools:itemCount="6"
            android:id="@+id/mySpacesRecyclerview"
            android:layout_marginBottom="20dp"
            tools:listitem="@layout/explore_item"
            android:layout_marginTop="3dp"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>