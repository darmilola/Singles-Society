<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/titleLayout"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:weightSum="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Discover"
            android:id="@+id/exploreDiscover"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/dark_text_color"
            android:layout_gravity="left"
            android:textSize="20sp"
            android:fontFamily="@font/kumelianbold"/>


        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/exploreDiscoverViewAll"
            app:layout_constraintLeft_toRightOf="@id/exploreDiscover"
            android:background="#6AB9B9B9"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="7dp"
            android:text="View all"
            android:padding="8dp"
            android:backgroundTint="#97FA4375"
            android:id="@+id/exploreDiscoverViewAll"
            android:background="@drawable/pink_outline_circle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#B5FA4375"
            android:textSize="10sp"
            android:fontFamily="@font/manropebold"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        app:layout_constraintTop_toBottomOf="@id/titleLayout"
        tools:itemCount="2"
        android:id="@+id/exploreGridItemRecyclerview"
        android:layout_marginBottom="20dp"
        tools:listitem="@layout/explore_item"
        android:layout_marginTop="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>