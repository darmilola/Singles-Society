<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="#FA4375">

        <com.mindinventory.AutoScrollCircularPagerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/exploreAutoScrollPagerView"
            android:orientation="horizontal"
            app:auto_scroll_delay="5000"
            app:dot_margin="20dp"
            app:selected_dot_color="#FA4375"
            app:unselected_dot_color="@color/light_text_color"
            app:dot_gravity="bottom"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>