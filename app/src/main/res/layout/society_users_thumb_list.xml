<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center|left"
            app:civ_border_color="@color/white"
            app:civ_border_width="1dp"
            android:src="@drawable/enthusiastic"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="-8dp"
            android:layout_gravity="center|left"
            app:civ_border_color="@color/white"
            app:civ_border_width="1dp"
            android:src="@drawable/young_man"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="-8dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center|left"
            app:civ_border_color="@color/white"
            app:civ_border_width="1dp"
            android:src="@drawable/business_woman"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center|left"
            android:layout_marginLeft="-8dp"
            app:civ_border_color="@color/white"
            app:civ_border_width="1dp"
            android:src="@drawable/woman_official"/>
        <TextView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="#F3F3F3"
            android:fontFamily="@font/ggsanssemibold"
            android:backgroundTint="@color/society_pink"
            android:text="+56"
            android:src="@drawable/woman_official"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>