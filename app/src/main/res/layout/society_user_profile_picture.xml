<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <io.getstream.avatarview.AvatarView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/userProfileImageViewWithIndicator"
        app:avatarViewIndicatorColor="@color/materialGreen"
        app:avatarViewIndicatorEnabled="true"
        app:avatarViewPlaceholder="@drawable/woman_official"
        app:avatarViewIndicatorPosition="bottomRight"
        app:avatarViewIndicatorSizeCriteria="6"
        app:avatarViewIndicatorBorderColor="@color/transparent"
        android:scaleType="centerCrop"
        app:avatarViewBorderColor="@color/transparent"
        app:avatarViewInitialsTextStyle="bold"
        app:avatarViewShape="circle" />


</FrameLayout>