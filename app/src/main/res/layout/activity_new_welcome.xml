<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/special_activity_background"
    android:weightSum="6"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5">
        <include layout="@layout/fragment_welcome_landing_page" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </FrameLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:gravity="top"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="2"
            android:layout_marginTop="5dp">

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:text="Get started"
                app:strokeColor="@color/society_pink"
                app:strokeWidth="1.5dp"
                android:fontFamily="@font/ggsanssemibold"
                app:backgroundTint="@color/society_pink"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:textColor="@color/white"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="Continue With Email"
                app:strokeColor="@color/society_pink"
                app:strokeWidth="1.5dp"
                android:fontFamily="@font/ggsanssemibold"
                app:iconGravity="textStart"
                app:icon="@drawable/mail_2x"
                app:iconPadding="8dp"
                app:iconTint="@color/society_pink"
                style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                android:textColor="@color/society_pink"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="Continue With Google"
                app:strokeColor="@color/materialBlue"
                app:strokeWidth="1.5dp"
                android:fontFamily="@font/ggsanssemibold"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:icon="@drawable/google_icon"
                app:iconTint="@color/materialBlue"
                app:backgroundTint="@color/white"
                style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                android:textColor="@color/materialBlue"/>


        </LinearLayout>

</LinearLayout>