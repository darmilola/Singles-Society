<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/special_activity_background"
    android:weightSum="3"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:id="@+id/welcomePeople"
        android:transitionName="welcomePeople"
        android:layout_gravity="center|bottom"
        android:layout_weight="1.5">


        <View
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="top|center"
            android:layout_marginTop="70dp"
            android:background="@drawable/filled_full_circle"
            android:backgroundTint="#8AFA5672"/>

        <FrameLayout
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#2AFA5672"
                android:layout_margin="15dp"
                android:gravity="center"
                android:background="@drawable/filled_full_circle">

            </LinearLayout>



            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:translationZ="5dp"
                android:src="@drawable/happy_lady"
                app:cardCornerRadius="100dp"
                android:layout_gravity="center"
                android:outlineSpotShadowColor="@color/transparent"
                app:cardBackgroundColor="@color/transparent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/happy_lady"/>
            </androidx.cardview.widget.CardView>


            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center|left"
                android:layout_marginLeft="50dp"
                android:background="@drawable/filled_full_circle"
                android:backgroundTint="#8AFA5672"/>

            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/happy_lady"
                app:cardCornerRadius="90dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="30dp"
                android:outlineSpotShadowColor="@color/transparent"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/transparent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/african_american_woman"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/happy_lady"
                app:cardCornerRadius="90dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="70dp"
                android:layout_gravity="bottom"
                android:outlineSpotShadowColor="@color/transparent"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/transparent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/business_woman"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/happy_lady"
                app:cardCornerRadius="90dp"
                android:layout_marginTop="30dp"
                android:translationZ="2dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="70dp"
                android:layout_gravity="bottom|right"
                android:outlineSpotShadowColor="@color/transparent"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/transparent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/young_man"/>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/happy_lady"
                app:cardCornerRadius="90dp"
                android:layout_marginRight="30dp"
                android:translationZ="2dp"
                android:layout_gravity="top|right"
                android:outlineSpotShadowColor="@color/transparent"
                app:cardBackgroundColor="@color/transparent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/black_traditional"/>
            </androidx.cardview.widget.CardView>

        </FrameLayout>



    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="1.5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="7dp"
            android:textSize="17sp"
            android:gravity="left"
            android:textColor="@color/light_text_color"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/nunitobold"
            android:text="Let's get social"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="4dp"
            android:textSize="30dp"
            android:gravity="left"
            android:textColor="@color/dark_text_color"
            android:fontFamily="@font/opensansbold"
            android:text="The best place to\nmeet your future\nPartner"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="5dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#fa5672"
                android:id="@+id/getStarted"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="Get started"
                        android:textColor="@color/white"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="25dp"
                        android:src="@drawable/up_arrow"
                        app:tint="@color/white"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/emailSignIn"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/sso_outline_circle"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="7dp"
                    android:tint="@color/pink"
                    android:src="@drawable/mail_2x"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:textColor="@color/pink"
                    android:textSize="15sp"
                    android:fontFamily="@font/nunitobold"
                    android:text="Login with Email"/>
            </LinearLayout>






            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/googleSignIn"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/sso_outline_circle"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="7dp"
                    android:src="@drawable/google"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:textColor="@color/dark_text_color"
                    android:textSize="15sp"
                    android:fontFamily="@font/nunitobold"
                    android:text="Continue with Google"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>