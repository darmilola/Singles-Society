<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layerType="hardware"
    android:fitsSystemWindows="true"
    android:background="@color/transparent"
    android:id="@+id/activity_main_drawer_layout"
    tools:context=".MainActivity">

    <include layout="@layout/activity_main_content"/>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="250dp"
        android:id="@+id/activity_main_profile_nav_view"
        android:layout_height="match_parent"
        android:background="@drawable/activity_main_drawer_background"
        android:layout_gravity="left">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_marginLeft="45dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="40dp"
                        android:orientation="horizontal">

                        <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center|bottom"
                            fresco:actualImageScaleType="fitXY"
                            fresco:placeholderImage="@drawable/lady2"
                            fresco:placeholderImageScaleType="centerCrop"
                            fresco:roundAsCircle="true"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="35dp"
                        android:fontFamily="@font/clanmed"
                        android:gravity="center|left"
                        android:layout_marginTop="10dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:text="Damilola, 25"
                        android:textColor="@color/colorPrimary"
                        android:textSize="17dp"/>




                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center|left"
                        android:id="@+id/matches_menu"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="23dp"
                            android:src="@drawable/ic_iconfinder_compare"
                            android:tint="#201D1D" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/clannews"
                            android:gravity="center|left"
                            android:text="Matches"
                            android:textColor="#201D1D"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center|left"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="23dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_iconfinder_streamline"
                            android:tint="#201D1D" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/clannews"
                            android:gravity="center|left"
                            android:text="Counselling"
                            android:textColor="#201D1D"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center|left"
                        android:id="@+id/main_marketplace"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="23dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_iconfinder_artboard"
                            android:tint="#201D1D" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/clannews"
                            android:gravity="center|left"
                            android:text="MarketPlace"
                            android:textColor="#201D1D"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/activity_main_drawer_user_profile_layout"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center|left"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:src="@drawable/ic_iconfinder_avatar"
                            android:tint="#201D1D" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/clannews"
                            android:gravity="center|left"
                            android:text="Profile"
                            android:textColor="#201D1D"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center|left"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_iconfinder_settings"
                            android:tint="#201D1D"
                            android:padding="1dp"/>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/clannews"
                            android:gravity="center|left"
                            android:text="Settings"
                            android:textColor="#201D1D"
                            android:textSize="16dp" />
                    </LinearLayout>


                    <View
                        android:layout_width="250dp"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="20dp"
                        android:background="@color/grey"/>
                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center|left"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:src="@drawable/ic_iconfinder__friends"
                            android:tint="#201D1D" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/clannews"
                            android:gravity="center|left"
                            android:text="Invite a friend"
                            android:textColor="#201D1D"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center|left"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_iconfinder_ui_basic_outline"
                            android:tint="#201D1D" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/clannews"
                            android:gravity="center|left"
                            android:text="Help"
                            android:textColor="#201D1D"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center|left"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_iconfinder_delete_discart_exit_less_line"
                            android:tint="#201D1D" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/clannews"
                            android:gravity="center|left"
                            android:text="Logout"
                            android:textColor="#201D1D"
                            android:textSize="16dp" />
                    </LinearLayout>
                </LinearLayout>

            </ScrollView>
        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>