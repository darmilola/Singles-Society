<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/profileArea"
        app:layout_constraintTop_toTopOf="parent">

        <include
            layout="@layout/society_user_profile_picture"
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="5dp"
            android:id="@+id/accountProfilePictureLayout"
            app:layout_constraintEnd_toStartOf="@id/accountInfoRoot"/>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/accountInfoRoot"
            android:gravity="center|left"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            app:layout_constraintLeft_toRightOf="@id/accountProfilePictureLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/actionAreaLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Katie Allens"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#303030"
                android:textSize="16sp"
                android:fontFamily="@font/ggsansbold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="I was just reading about data binding feature in android. I was trying to bind a view from a nested layout. My activity is android's default template"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="3dp"
                android:textSize="16sp"
                android:lineSpacingExtra="2dp"
                android:textColor="#595959"
                android:fontFamily="@font/ggsansmedium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="34.5k followers  \u2022  550k posts"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:textColor="#4E4E4E"
                android:textSize="13sp"
                android:fontFamily="@font/ggsanssemibold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/actionAreaLayout"
            android:gravity="right"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal">

           <com.google.android.material.button.MaterialButton
               android:layout_width="100dp"
               android:gravity="center"
               android:padding="3dp"
               app:strokeColor="@color/society_pink"
               app:strokeWidth="1dp"
               app:cornerRadius="6dp"
               app:iconSize="20dp"
               app:iconGravity="textEnd"
               app:icon="@drawable/add_user_icon"
               style="@style/Widget.Material3.Button.OutlinedButton"
               android:fontFamily="@font/opensans_semi_bold"
               android:textSize="13sp"
               android:layout_height="40dp"
               android:text="Follow"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:background="#C6C6C6"/>

</LinearLayout>