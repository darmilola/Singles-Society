<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/transparent"
    android:layout_height="wrap_content"
    android:minHeight="160dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="15dp"
        app:cardBackgroundColor="@color/White"
        app:cardCornerRadius="20dp"
        android:padding="30dp"
        app:cardElevation="0dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About Me"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:textSize="16dp"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/airsemi"/>

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:flexWrap="wrap"
        android:layout_marginTop="5dp"
        app:justifyContent="center">

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:fontFamily="@font/airsemi"
            android:padding="10dp"
            android:text="Single"
            android:id="@+id/type_about_status"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp"
            app:chipBackgroundColor="@color/transparent"
            app:chipIcon="@drawable/status"
            app:chipIconSize="16dp"
            app:chipIconTint="@color/pinkypinky"
            app:chipIconVisible="true"
            app:chipSurfaceColor="#DBE4E9"
            app:closeIconEnabled="false"
            app:iconStartPadding="10dp"/>

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/airsemi"
            android:padding="10dp"
            android:text="d'oesnt smoke"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp"
            android:id="@+id/type_about_smoking"
            app:chipBackgroundColor="@color/transparent"
            app:chipIcon="@drawable/smoking"
            app:chipIconSize="16dp"
            app:chipIconTint="@color/pinkypinky"
            app:chipIconVisible="true"
            app:chipSurfaceColor="#DBE4E9"
            app:closeIconEnabled="false"
            app:iconStartPadding="10dp" />

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:ellipsize="end"
            android:fontFamily="@font/airsemi"
            android:maxLines="1"
            android:id="@+id/type_about_drinking"
            android:padding="10dp"
            android:text="d'oesnt drink"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp"
            app:chipBackgroundColor="@color/transparent"
            app:chipIcon="@drawable/drink"
            app:chipIconSize="16dp"
            app:chipIconTint="@color/pinkypinky"
            app:chipIconVisible="true"
            app:chipSurfaceColor="#DBE4E9"
            app:closeIconEnabled="false"
            app:iconStartPadding="10dp" />

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:ellipsize="end"
            android:fontFamily="@font/airsemi"
            android:maxLines="1"
            android:id="@+id/type_about_language"
            android:padding="10dp"
            android:text="English and hausa"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp"
            app:chipBackgroundColor="@color/transparent"
            app:chipIcon="@drawable/language"
            app:chipIconTint="@color/pinkypinky"
            app:chipIconSize="16dp"
            app:chipIconVisible="true"
            app:chipSurfaceColor="#DBE4E9"
            app:closeIconEnabled="false"
            app:iconStartPadding="10dp" />

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/airsemi"
            android:maxLines="1"
            android:padding="10dp"
            android:id="@+id/type_about_religion"
            android:text="Christianity"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp"
            app:chipIconTint="@color/pinkypinky"
            app:chipBackgroundColor="@color/transparent"
            app:chipIcon="@drawable/prayer"
            app:chipIconSize="16dp"
            app:chipIconVisible="true"
            app:chipSurfaceColor="#DBE4E9"
            app:closeIconEnabled="false"
            app:iconStartPadding="10dp" />
    </com.google.android.flexbox.FlexboxLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>

</LinearLayout>