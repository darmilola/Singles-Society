<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="6"
    android:orientation="vertical"
    android:background="@color/special_activity_background"
    tools:context=".fragments.WelcomeFragmentLandingPage">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <View
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="right|top"
            android:backgroundTint="#5FCEF6"
            android:layout_marginRight="-60dp"
            android:elevation="2dp"
            android:layout_marginTop="-150dp"
            android:background="@drawable/filled_full_circle"/>



        <View
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="top|left"
            android:backgroundTint="#27FA4375"
            android:layout_marginLeft="-100dp"
            android:layout_marginTop="-120dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/filled_full_circle"/>






        <View
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:layout_gravity="bottom|left"
            android:backgroundTint="#F3F3F3"
            android:layout_marginLeft="-130dp"
            android:background="@drawable/filled_full_circle"/>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="20dp"
            android:layout_gravity="center">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/welcomePeople"
                android:transitionName="welcomePeople"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp">



                <View
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="70dp"
                    android:background="@drawable/filled_full_circle"
                    android:backgroundTint="#8AFA5672"/>

                <FrameLayout
                    android:layout_width="400dp"
                    android:layout_height="400dp"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="#2AFA5672"
                        android:layout_margin="15dp"
                        android:gravity="center"
                        android:background="@drawable/filled_full_circle"/>



                    <androidx.cardview.widget.CardView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:translationZ="5dp"
                        android:src="@drawable/happy_lady"
                        app:cardCornerRadius="100dp"
                        android:layout_gravity="center"
                        android:outlineSpotShadowColor="@color/transparent"
                        app:cardBackgroundColor="@color/transparent">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/happy_lady"/>
                    </androidx.cardview.widget.CardView>


                    <View
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center|left"
                        android:layout_marginLeft="50dp"
                        android:background="@drawable/filled_full_circle"
                        android:backgroundTint="#8AFA5672"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/happy_lady"
                        app:cardCornerRadius="90dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="30dp"
                        android:outlineSpotShadowColor="@color/transparent"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/transparent">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/african_american_woman"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/happy_lady"
                        app:cardCornerRadius="90dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginBottom="70dp"
                        android:layout_gravity="bottom"
                        android:outlineSpotShadowColor="@color/transparent"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/transparent">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/business_woman"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:src="@drawable/happy_lady"
                        app:cardCornerRadius="90dp"
                        android:layout_marginTop="30dp"
                        android:translationZ="2dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="70dp"
                        android:layout_gravity="bottom|right"
                        android:outlineSpotShadowColor="@color/transparent"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/transparent">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/young_man"/>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/happy_lady"
                        app:cardCornerRadius="90dp"
                        android:layout_marginRight="30dp"
                        android:translationZ="2dp"
                        android:layout_gravity="top|right"
                        android:outlineSpotShadowColor="@color/transparent"
                        app:cardBackgroundColor="@color/transparent">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/black_traditional"/>
                    </androidx.cardview.widget.CardView>

                </FrameLayout>



            </FrameLayout>

        </FrameLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:gravity="center|left"
                android:textSize="20sp"
                android:ellipsize="end"
                android:layout_marginRight="30dp"
                android:textScaleX="1.08"
                android:layout_marginBottom="5dp"
                android:textColor="@color/new_dark_text_color"
                android:fontFamily="@font/ggsansbold"
                android:text="Meet New People"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:textSize="18sp"
                android:ellipsize="end"
                android:textScaleX="1.08"
                android:maxLines="2"
                android:lineSpacingExtra="3dp"
                android:textColor="@color/dark_text_color"
                android:fontFamily="@font/ggsansmedium"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation "/>

        </LinearLayout>

    </FrameLayout>



</LinearLayout>