<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/special_activity_background"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="5dp"
    android:layout_weight="7">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:layout_weight="1">
        <include
            layout="@layout/society_user_profile_picture"
            android:layout_height="45dp"
            android:layout_width="45dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:id="@+id/accountProfilePictureLayout"
            app:layout_constraintEnd_toStartOf="@id/accountInfoRoot"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="6">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="13sp"
                android:lineSpacingExtra="4dp"
                android:layout_gravity="left|center"
                android:textColor="@color/dark_text_color"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_alignParentLeft="true"
                android:id="@+id/username"
                android:maxLength="20"
                android:fontFamily="@font/ggsansbold"
                android:text="\@alexaOre0_"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="13sp"
                android:lineSpacingExtra="4dp"
                android:layout_gravity="right|center"
                android:textColor="@color/dark_text_color"
                android:maxLines="5"
                android:ellipsize="end"
                android:layout_alignParentRight="true"
                android:id="@+id/commentTime"
                android:maxLength="10"
                android:fontFamily="@font/ggsansmedium"
                android:text="5 min"/>

        </RelativeLayout>


        <include layout="@layout/society_shared_post_content_area"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_marginRight="5dp"
            android:id="@+id/postCommentText"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp">

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                app:tint="@color/pink"
                android:layout_marginTop="3dp"
                android:src="@drawable/like"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:textSize="12sp"
                android:lineSpacingExtra="4dp"
                android:textColor="@color/dark_text_color"
                android:maxLines="5"
                android:ellipsize="end"
                android:layout_marginLeft="3dp"
                android:maxLength="350"
                android:fontFamily="@font/ggsansbold"
                android:text="(250)"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:id="@+id/commentReplyLayout"
                android:layout_marginRight="15dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    app:tint="@color/dark_text_color"
                    android:src="@drawable/reply"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:textSize="12sp"
                    android:lineSpacingExtra="4dp"
                    android:textColor="@color/dark_text_color"
                    android:maxLines="5"
                    android:ellipsize="end"
                    android:id="@+id/commentReplyCount"
                    android:layout_marginLeft="4dp"
                    android:maxLength="350"
                    android:fontFamily="@font/ggsansbold"
                    android:text="Reply (3)"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    app:tint="@color/dark_text_color"
                    android:rotation="90"
                    android:layout_marginTop="2dp"
                    android:id="@+id/commentReplyArrow"
                    android:src="@drawable/chevron_right_arrow_icon"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>