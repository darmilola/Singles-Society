<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/special_activity_background"
    android:layout_height="420dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/glassfacade"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:gravity="bottom"
        android:backgroundTint="@color/special_activity_background"
        android:background="@drawable/spaces_bg">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:maxLines="2"
          android:ellipsize="end"
          android:paddingTop="10dp"
          android:textColor="@color/dark_text_color"
          android:textSize="20sp"
          android:fontFamily="@font/avenirbold"
          android:lineSpacingExtra="7dp"
          android:text="Rarible the Only Space on this Platform"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:maxLines="2"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:textColor="@color/light_text_color"
            android:textSize="14sp"
            android:fontFamily="@font/nunitomed"
            android:lineSpacingExtra="7dp"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_marginRight="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center|left"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/white"
                android:src="@drawable/enthusiastic"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:layout_marginLeft="-8dp"
                android:layout_gravity="center|left"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/white"
                android:src="@drawable/young_man"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="-8dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center|left"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/white"
                android:src="@drawable/business_woman"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center|left"
                app:civ_border_width="2dp"
                android:layout_marginLeft="-8dp"
                app:civ_border_color="@color/white"
                android:src="@drawable/woman_official"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:maxLines="2"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:textColor="@color/dark_text_color"
                android:textSize="14sp"
                android:fontFamily="@font/nunitomed"
                android:lineSpacingExtra="7dp"
                android:text="Dami, Alicia and 250k more"/>


        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Join Space"
        android:gravity="center"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center|right"
        android:layout_marginRight="55dp"
        android:textColor="@color/pink"
        android:fontFamily="@font/nunitomed"
        android:textSize="14sp"
        android:background="@drawable/pink_outline_circle"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center|right"
        android:layout_marginRight="15dp"
        android:src="@drawable/secure_icon"
        android:textSize="14sp"
        android:tint="@color/white"
        android:background="@drawable/filled_transparent_circle"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="30dp"
        android:layout_gravity="center|left"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="50dp"
        app:civ_border_width="3dp"
        app:civ_border_color="@color/white"
        android:src="@drawable/woman_official"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:id="@+id/spaceExitCta"
            android:paddingLeft="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingRight="5dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/filled_transparent_circle"
            android:layout_gravity="center|left">

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="16dp"
                app:tint="@color/dark_text_color"
                android:layout_marginRight="15dp"
                android:src="@drawable/arrow_arrows_back_direction_left_icon"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:paddingLeft="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingRight="5dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/filled_transparent_circle"
            android:layout_gravity="center|right">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="16dp"
                app:tint="@color/dark_text_color"
                android:layout_marginRight="15dp"
                android:src="@drawable/overflow_menu_icon"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>