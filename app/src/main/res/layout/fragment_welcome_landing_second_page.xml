<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="6"
    android:orientation="vertical"
    android:background="@color/special_activity_background"
    tools:context=".fragments.WelcomeFragmentLandingPage">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4.5">


        <View
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="right|top"
            android:backgroundTint="#5FCEF6"
            android:layout_marginRight="-60dp"
            android:elevation="2dp"
            android:layout_marginTop="-150dp"
            android:background="@drawable/filled_full_circle"/>

        <View
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="right|center"
            android:backgroundTint="#27FA4375"
            android:layout_marginRight="-150dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/filled_full_circle"/>






        <View
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:layout_gravity="bottom|left"
            android:backgroundTint="#F3F3F3"
            android:layout_marginLeft="-130dp"
            android:background="@drawable/filled_full_circle"/>






        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="10dp">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:elevation="20dp"
                android:id="@+id/smilingWomanLayout"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/descTextLayout"
                android:layout_gravity="top">


            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_gravity="center|top"
                android:src="@drawable/smiling_woman"
                android:scaleType="centerCrop"/>



            <View
                android:layout_width="550dp"
                android:layout_height="400dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="-150dp"
                android:layout_marginLeft="-340dp"
                android:background="@drawable/huge_radii_circle"/>

            </FrameLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/descTextLayout"
                android:layout_gravity="bottom"
                android:elevation="25dp"
                app:layout_constraintTop_toBottomOf="@id/smilingWomanLayout"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:gravity="center|left"
                    android:textSize="25sp"
                    android:ellipsize="end"
                    android:layout_marginRight="30dp"
                    android:textScaleX="1.08"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/new_dark_text_color"
                    android:fontFamily="@font/ggsanssemibold"
                    android:text="Welcome To App Society"/>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:textSize="18sp"
                    android:ellipsize="end"
                    android:textScaleX="1.08"
                    android:maxLines="2"
                    android:textColor="@color/dark_text_color"
                    android:fontFamily="@font/ggsansmedium"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation "/>

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>





    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5">

    </FrameLayout>



</LinearLayout>