<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/reactionCtaLayout"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center|left">


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:tint="@color/society_pink"
                android:src="@drawable/love_like_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="100k"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"
                android:textColor="@color/dark_text_color"
                android:fontFamily="@font/ggsanssemibold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/commentLayout"
            android:orientation="horizontal"
            android:gravity="center">


            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                app:tint="@color/dark_text_color"
                android:src="@drawable/chat_circle_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="400"
                android:layout_marginLeft="4dp"
                android:textSize="15sp"
                android:textColor="@color/dark_text_color"
                android:fontFamily="@font/ggsanssemibold"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center|right">


            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                app:tint="@color/dark_text_color"
                android:src="@drawable/view_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="70"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"
                android:textColor="@color/dark_text_color"
                android:fontFamily="@font/ggsanssemibold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center|right">


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:tint="@color/dark_text_color"
                android:src="@drawable/share_outline_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="70"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"
                android:textColor="@color/dark_text_color"
                android:fontFamily="@font/ggsanssemibold"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>