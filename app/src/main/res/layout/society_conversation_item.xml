<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:background="@color/special_activity_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/special_activity_background"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/community_post_background">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/profileArea"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                app:layout_constraintBottom_toTopOf="@id/postContentLayout">

                <include
                    layout="@layout/society_user_profile_picture"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/accountProfilePictureLayout"
                    app:layout_constraintEnd_toStartOf="@id/accountInfoRoot"/>


                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/accountInfoRoot"
                    android:gravity="center|left"
                    android:layout_marginLeft="1dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/accountProfilePictureLayout">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="\@KatieAllen"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="#303030"
                        android:textSize="15sp"
                        android:fontFamily="@font/ggsansbold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/lighter_text_color"
                        android:fontFamily="@font/ggsansmedium"
                        android:textSize="13sp"
                        android:text="6:37pm"
                        android:gravity="center"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:orientation="horizontal">



                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_gravity="center"
                        android:rotation="90"
                        app:tint="@color/dark_text_color"
                        android:src="@drawable/overflow_menu_icon"/>

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>



            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/profileArea"
                android:orientation="horizontal"
                android:id="@+id/postContentLayout">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <include layout="@layout/society_post_content_area"
                        app:layout_constraintBottom_toTopOf="@id/reactionCtaLayout"
                        app:layout_constraintTop_toTopOf="parent"
                        android:paddingLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/postTextView"/>



                    <include layout="@layout/society_post_reaction_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="25dp"
                        android:layout_marginLeft="10dp"
                        app:layout_constraintTop_toBottomOf="@id/postTextView"
                        android:id="@+id/reactionCtaLayout"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </FrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>