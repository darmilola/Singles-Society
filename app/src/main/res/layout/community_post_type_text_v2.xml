<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/special_activity_background"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/special_activity_background"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:id="@+id/profileArea"
                app:layout_constraintTop_toTopOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginLeft="5dp"
                    app:civ_border_width="0.5dp"
                    android:id="@+id/accountProfilePicture"
                    app:layout_constraintEnd_toStartOf="@id/accountInfoRoot"
                    app:civ_border_color="#FA4375"
                    android:src="@drawable/woman_official"/>
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/accountInfoRoot"
                    android:gravity="center|left"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/accountProfilePicture">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="myusernamegoeshere"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="#303030"
                        android:textSize="15sp"
                        android:fontFamily="@font/manropebold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@The Space Name Goes here"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/light_text_color"
                        android:textSize="12sp"
                        android:fontFamily="@font/manropemedium"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/lighter_text_color"
                        android:fontFamily="@font/manropesemibold"
                        android:textSize="12sp"
                        android:text="45m"
                        android:gravity="center"/>

                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_gravity="center"
                        android:rotation="90"
                        app:tint="@color/dark_text_color"
                        android:src="@drawable/overflow_menu_icon"/>

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>



            <com.SinglesSociety.SocialText.RichTextController.RTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/postTextView"
                android:background="@color/transparent"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:fontFamily="@font/manropemedium"
                android:textColor="#303030"
                android:maxLines="5"
                android:text="The implosion of a submersible tourin board, has prompted questions about the regulations overseeing such voyages â€” and whether the vehicle itself was safe.On Friday, the company responsible for the tour, OceanGate Expeditions, defended the decisions of its chief executive Stockton Rush, who died on board the submersible."
                app:layout_constraintBottom_toTopOf="@id/postAttachmentRecyclerView"
                app:layout_constraintTop_toBottomOf="@id/profileArea"/>


            <com.singlesSociety.Arvi.widget.PlayableItemsRecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/postTextView"
                app:layout_constraintBottom_toTopOf="@id/reactionView"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:clipToPadding="false"
                app:layout_constraintHeight_max="500dp"
                tools:itemCount="5"
                android:paddingRight="80dp"
                android:orientation="horizontal"
                tools:listitem="@layout/post_text_image_attachment_v2"
                android:id="@+id/postAttachmentRecyclerView"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/reactionView"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/postAttachmentRecyclerView"
                app:layout_constraintBottom_toTopOf="@id/reactionCtaLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="20k Likes"
                    android:textSize="13sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#303030"
                    android:fontFamily="@font/manropesemibold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="27 Comments"
                    android:textSize="13sp"
                    android:id="@+id/commentCount"
                    android:layout_marginLeft="5dp"
                    android:textColor="#303030"
                    android:fontFamily="@font/manropesemibold"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:id="@+id/dividerView"
                android:background="#B9B9B7B7"
                app:layout_constraintBottom_toTopOf="@id/reactionCtaLayout"
                app:layout_constraintTop_toBottomOf="@id/reactionView"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:weightSum="3"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/dividerView"
                android:layout_marginRight="10dp"
                android:id="@+id/reactionCtaLayout">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center|left">


                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:tint="@color/new_pink"
                        android:src="@drawable/love_like_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="Like"
                        android:layout_marginLeft="5dp"
                        android:textSize="13sp"
                        android:textColor="#303030"
                        android:fontFamily="@font/manropesemibold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/commentLayout"
                    android:orientation="horizontal"
                    android:gravity="center">


                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:tint="#303030"
                        android:src="@drawable/chat_circle_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="Comment"
                        android:layout_marginLeft="4dp"
                        android:textSize="13sp"
                        android:textColor="#303030"
                        android:fontFamily="@font/manropesemibold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center|right">


                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:tint="#303030"
                        android:rotation="20"
                        android:src="@drawable/send_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="Share"
                        android:layout_marginLeft="5dp"
                        android:textSize="13sp"
                        android:textColor="#303030"
                        android:fontFamily="@font/manropesemibold"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#88B9B7B7"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/reactionCtaLayout"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>