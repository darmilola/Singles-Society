<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@color/special_activity_background"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/profileArea"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="10dp"
            app:civ_border_width="1dp"
            android:id="@+id/accountProfilePicture"
            app:layout_constraintEnd_toStartOf="@id/accountInfoRoot"
            app:civ_border_color="#FA4375"
            android:src="@drawable/woman_official"/>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/accountInfoRoot"
            android:gravity="center|left"
            android:layout_marginLeft="7dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/accountProfilePicture">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Zaynab Sayiddah A."
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/new_dark_text_color"
                android:textSize="14sp"
                android:fontFamily="@font/manropebold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="\@The Space Name Goes here"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="2dp"
                android:textColor="@color/light_text_color"
                android:textSize="12sp"
                android:fontFamily="@font/opensansregular"/>

        </LinearLayout>


        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@color/light_text_color"
            android:src="@drawable/overflow_menu_icon"/>
    </androidx.constraintlayout.widget.ConstraintLayout>



    <com.SinglesSociety.SocialText.RichTextController.RTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/postTextView"
        android:background="@color/transparent"
        android:textSize="15sp"
        android:lineSpacingExtra="4dp"
        android:fontFamily="@font/manropesemibold"
        android:textColor="@color/dark_text_color"
        android:maxLines="5"
        android:text="The implosion of a submersible tourin board, has prompted questions about the regulations overseeing such voyages â€” and whether the vehicle itself was safe.On Friday, the company responsible for the tour, OceanGate Expeditions, defended the decisions of its chief executive Stockton Rush, who died on board the submersible."
        app:layout_constraintBottom_toTopOf="@id/postAttachmentRecyclerView"
        app:layout_constraintTop_toBottomOf="@id/profileArea"/>


    <com.singlesSociety.Arvi.widget.PlayableItemsRecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/postTextView"
        app:layout_constraintBottom_toTopOf="@id/reactionView"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        tools:listitem="@layout/post_text_image_attachment"
        android:id="@+id/postAttachmentRecyclerView"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/reactionView"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/postAttachmentRecyclerView"
        app:layout_constraintBottom_toTopOf="@id/reactionCtaLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="20k Likes"
            android:textSize="12sp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/light_text_color"
            android:fontFamily="@font/opensansbold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="27 Comments"
            android:textSize="12sp"
            android:id="@+id/commentCount"
            android:layout_marginLeft="5dp"
            android:textColor="@color/light_text_color"
            android:fontFamily="@font/opensansbold"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:id="@+id/dividerView"
        android:background="#B97A7A7A"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toTopOf="@id/reactionCtaLayout"
        app:layout_constraintTop_toBottomOf="@id/reactionView"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:weightSum="3"
        app:layout_constraintTop_toBottomOf="@id/dividerView"
        android:layout_marginRight="10dp"
        android:id="@+id/reactionCtaLayout">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center|left">


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:tint="@color/society_pink"
                android:src="@drawable/iconfinder_heart_favourite_favorite_love"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Like"
                android:layout_marginLeft="7dp"
                android:textSize="13sp"
                android:fontFamily="@font/opensansbold"
                android:textColor="@color/light_text_color"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/commentLayout"
            android:orientation="horizontal"
            android:gravity="center">


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:tint="#A13C3A3A"
                android:src="@drawable/comment_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Comment"
                android:layout_marginLeft="7dp"
                android:textSize="13sp"
                android:fontFamily="@font/opensansbold"
                android:textColor="@color/light_text_color"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center|right">


            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                app:tint="#A13C3A3A"
                android:src="@drawable/share_bold_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Share"
                android:layout_marginLeft="7dp"
                android:textSize="13sp"
                android:fontFamily="@font/opensansbold"
                android:textColor="@color/light_text_color"/>

        </LinearLayout>

    </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>