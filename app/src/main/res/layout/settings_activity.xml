<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/special_activity_background">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:background="@color/white"
    android:gravity="center"
    android:weightSum="5">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="12sp"
        android:fontFamily="@font/manropeextrabold"
        android:textColor="#09AE59"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:textSize="16sp"
        android:text="Settings"
        android:fontFamily="@font/avenirbold"
        android:textColor="@color/new_dark_text_color"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center|right"
        android:layout_marginRight="16dp"
        android:textSize="12sp"
        android:id="@+id/settinngsDone"
        android:text="Done"
        android:fontFamily="@font/manropeextrabold"
        android:textColor="#1F6BDB"/>
</LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:layout_marginLeft="16dp"
                    android:textSize="12sp"
                    android:text="DATA USAGE"
                    android:fontFamily="@font/manropeextrabold"
                    android:textColor="@color/new_dark_text_color"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:paddingLeft="16dp"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="Autoplay Videos"
                        android:textSize="14sp"
                        android:fontFamily="@font/manropemedium"
                        android:textColor="@color/dark_text_color"/>

                    <com.github.angads25.toggle.widget.LabeledSwitch
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_margin="16dp"
                        android:textSize="13sp"
                        app:on="false"
                        app:colorBorder="@color/colorAccent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:layout_marginLeft="16dp"
                    android:textSize="12sp"
                    android:text="WEB PROFILES"
                    android:fontFamily="@font/manropeextrabold"
                    android:textColor="@color/new_dark_text_color"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@color/white">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Username"
                            android:gravity="center"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:textSize="14sp"
                            android:fontFamily="@font/manropemedium"
                            android:textColor="@color/dark_text_color"/>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:gravity="center|right">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Add"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:fontFamily="@font/avenirbold"
                            android:textColor="@color/dark_text_color"/>
                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            app:tint="@color/lighter_text_color"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/chevron_right_arrow_icon"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:layout_marginLeft="16dp"
                    android:textSize="12sp"
                    android:text="Notifications"
                    android:fontFamily="@font/manropeextrabold"
                    android:textColor="@color/new_dark_text_color"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:paddingLeft="16dp"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="Email"
                        android:textSize="14sp"
                        android:fontFamily="@font/manropemedium"
                        android:textColor="@color/dark_text_color"/>

                    <com.github.angads25.toggle.widget.LabeledSwitch
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_margin="16dp"
                        android:textSize="13sp"
                        app:on="false"
                        app:colorBorder="@color/colorAccent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:paddingLeft="16dp"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="Push Notification"
                        android:textSize="14sp"
                        android:fontFamily="@font/manropemedium"
                        android:textColor="@color/dark_text_color"/>

                    <com.github.angads25.toggle.widget.LabeledSwitch
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_margin="16dp"
                        android:textSize="13sp"
                        app:on="true"
                        app:colorBorder="@color/colorAccent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:paddingLeft="16dp"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="Team Singles Society"
                        android:textSize="14sp"
                        android:fontFamily="@font/manropemedium"
                        android:textColor="@color/dark_text_color"/>

                    <com.github.angads25.toggle.widget.LabeledSwitch
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_margin="16dp"
                        android:textSize="13sp"
                        app:on="false"
                        app:colorBorder="@color/colorAccent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:layout_marginLeft="16dp"
                    android:textSize="12sp"
                    android:text="Contact us"
                    android:textAllCaps="true"
                    android:fontFamily="@font/manropeextrabold"
                    android:textColor="@color/new_dark_text_color"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Help &amp; support"
                        android:gravity="center"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:textSize="14sp"
                        android:fontFamily="@font/manropemedium"
                        android:textColor="@color/dark_text_color"/>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:gravity="center|right">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            app:tint="@color/lighter_text_color"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/chevron_right_arrow_icon"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:layout_marginLeft="16dp"
                    android:textSize="12sp"
                    android:text="Legal"
                    android:textAllCaps="true"
                    android:fontFamily="@font/manropeextrabold"
                    android:textColor="@color/new_dark_text_color"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Licenses"
                        android:gravity="center"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:textSize="14sp"
                        android:fontFamily="@font/manropemedium"
                        android:textColor="@color/dark_text_color"/>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:gravity="center|right">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            app:tint="@color/lighter_text_color"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/chevron_right_arrow_icon"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Terms of Service"
                        android:gravity="center"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:textSize="14sp"
                        android:fontFamily="@font/manropemedium"
                        android:textColor="@color/dark_text_color"/>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:gravity="center|right">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            app:tint="@color/lighter_text_color"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/chevron_right_arrow_icon"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginTop="25dp"
                android:textSize="14sp"
                android:fontFamily="@font/manropemedium"
                android:textColor="@color/dark_text_color"
                android:background="@color/white"
                android:text="Log Out"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:tint="@color/pink"
                    android:src="@drawable/muzmatch"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:fontFamily="@font/manropemedium"
                    android:textColor="@color/dark_text_color"
                    android:text="Version  1.0.0"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="40dp"
                android:textSize="14sp"
                android:fontFamily="@font/manropemedium"
                android:textColor="@color/dark_text_color"
                android:background="@color/white"
                android:text="Delete Account"/>
        </LinearLayout>



    </ScrollView>




</LinearLayout>