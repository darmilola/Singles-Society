<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    android:background="@color/special_activity_background"
    tools:context=".SearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

       <ImageView
           android:layout_width="20dp"
           android:layout_height="20dp"
           android:layout_gravity="center"
           android:layout_marginLeft="10dp"
           android:id="@+id/searchBackBtn"
           app:tint="@color/new_dark_text_color"
           android:src="@drawable/arrow_arrows_back_direction_left_icon"/>

        <include layout="@layout/search_layout"/>

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:scrollbars="none">

        <com.google.android.material.chip.ChipGroup
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:singleLine="true"
            android:id="@+id/searchChipGroup"
            app:singleSelection="true"
            app:selectionRequired="true"
            style="@style/ChipTitleStyle"
            app:checkedChip="@id/followed"
            app:layout_constraintTop_toBottomOf="@id/forYouTitleLayout">

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                app:textStartPadding="10dp"
                app:textEndPadding="10dp"
                android:id="@+id/people"
                android:background="@color/special_activity_background"
                android:textColor="@color/chip_text_color"
                android:text="People"/>

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                app:textStartPadding="10dp"
                app:textEndPadding="10dp"
                android:background="@color/special_activity_background"
                android:textColor="@color/chip_text_color"
                android:id="@+id/posts"
                android:text="Popular Posts"/>

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                app:textStartPadding="10dp"
                app:textEndPadding="10dp"
                android:background="@color/special_activity_background"
                android:textColor="@color/chip_text_color"
                android:id="@+id/societies"
                android:text="Societies"/>

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                app:textStartPadding="10dp"
                app:textEndPadding="10dp"
                android:id="@+id/events"
                android:background="@color/special_activity_background"
                android:textColor="@color/chip_text_color"
                android:text="Events"/>


            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                app:textStartPadding="10dp"
                app:textEndPadding="10dp"
                android:background="@color/special_activity_background"
                android:id="@+id/hashtags"
                android:textColor="@color/chip_text_color"
                android:text="Popular Hashtags"/>
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>
</LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/searchRecyclerView"
        tools:listitem="@layout/hashtag_item"/>

</LinearLayout>