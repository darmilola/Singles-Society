<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="30dp"
                android:layout_height="4dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/filled_full_circle"
                android:backgroundTint="@color/light_text_color"
                android:layout_gravity="center"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_marginRight="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:tint="@color/light_text_color"
                    android:src="@drawable/ic_iconfinder_cross"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:text="DONE"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:fontFamily="@font/manropeextrabold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textColor="#09AE59"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Lifestyle"
                android:textColor="@color/new_dark_text_color"
                android:fontFamily="@font/avenirbold"
                android:textSize="23sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Put your best self forward by adding your lifestyle"
                android:textColor="#717070"
                android:fontFamily="@font/manropemedium"
                android:textSize="13sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:layout_marginTop="25dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:tint="@color/light_text_color"
                        android:src="@drawable/ic_iconfinder_settings"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Do you have any pets?"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/new_dark_text_color"
                        android:fontFamily="@font/avenirbold"
                        android:textSize="14sp"/>

                </LinearLayout>

                <com.google.android.material.chip.ChipGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/petsChipGroup"
                    app:singleSelection="true"
                    android:layout_marginTop="10dp"
                    app:chipSpacingVertical="-4dp"
                    app:chipSpacingHorizontal="7dp"
                    app:selectionRequired="true"
                    app:checkedChip="@id/followed">

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        app:textStartPadding="10dp"
                        app:textEndPadding="10dp"
                        android:id="@+id/followed"
                        android:textColor="@color/chip_text_color"
                        android:text="Followed"/>

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        app:textStartPadding="10dp"
                        app:textEndPadding="10dp"
                        android:textColor="@color/chip_text_color"
                        android:id="@+id/trending"
                        android:text="Trending"/>

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        app:textStartPadding="10dp"
                        app:textEndPadding="10dp"
                        android:textColor="@color/chip_text_color"
                        android:id="@+id/first"
                        android:text="First Category"/>

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        app:textStartPadding="10dp"
                        app:textEndPadding="10dp"
                        android:id="@+id/second"
                        android:textColor="@color/chip_text_color"
                        android:text="Second Category"/>
                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        app:textStartPadding="10dp"
                        app:textEndPadding="10dp"
                        android:textColor="@color/chip_text_color"
                        android:text="First Category"/>

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        app:textStartPadding="10dp"
                        app:textEndPadding="10dp"
                        android:textColor="@color/chip_text_color"
                        android:text="Second Category"/>
                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        app:textStartPadding="10dp"
                        app:textEndPadding="10dp"
                        android:textColor="@color/chip_text_color"
                        android:text="Okay"/>

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        app:textStartPadding="10dp"
                        app:textEndPadding="10dp"
                        android:textColor="@color/chip_text_color"
                        android:text="Second Category"/>
                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        app:textStartPadding="10dp"
                        app:textEndPadding="10dp"
                        android:textColor="@color/chip_text_color"
                        android:text="Firstategory"/>

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        app:textStartPadding="10dp"
                        app:textEndPadding="10dp"
                        android:textColor="@color/chip_text_color"
                        android:text="Second Categ"/>

                </com.google.android.material.chip.ChipGroup>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E6E5E5"
                    android:layout_marginTop="15dp"/>


            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

</androidx.cardview.widget.CardView>